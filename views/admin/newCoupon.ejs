<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Caseify Admin - Add New Coupon</title>
  <link rel="icon" type="image/png" sizes="32x32" href="/logoTab.png" />
  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          spacing: {
            '280': '280px',
            '227': '227px',
            '70': '70px',
            '60': '60px',
            '56': '56px',
          },
          colors: {
            primary: {
              DEFAULT: '#000000',
              light: '#333333',
              dark: '#000000'
            },
            secondary: {
              DEFAULT: '#FFFFFF',
              light: '#FFFFFF',
              dark: '#FFFFFF'
            },
            gray: {
              50: '#f9fafb',
              100: '#f3f4f6',
              200: '#e5e7eb',
              300: '#d1d5db',
              400: '#9ca3af',
              500: '#6b7280',
              600: '#4b5563',
              700: '#374151',
              800: '#1f2937',
              900: '#111827',
              950: '#030712'
            }
          }
        }
      }
    }
  </script>
</head>
<body class="bg-gray-50 font-sans antialiased">
  <div class="flex min-h-screen">
    <!-- Sidebar -->
    <%- include('partial/aside', {
      selected: 'coupons'
    })
    %>

    <!-- Main Content -->
    <main class="flex-1 ml-[227px] bg-gray-50">
      <div class="bg-white border-b border-gray-200 px-8 py-6">
        <div class="flex items-center gap-4">
          <a href="/admin/coupons" class="inline-flex items-center gap-1 text-gray-500 hover:text-gray-700">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Coupon Management
          </a>
        </div>
        <div class="mt-4">
          <h1 class="text-3xl font-semibold text-black">Add New Coupon</h1>
          <p class="text-gray-500 mt-1">Define the parameters for a new coupon.</p>
        </div>
      </div>

      <div class="p-8">
        <div class="max-w-4xl mx-auto bg-white rounded-xl shadow-sm p-6">
          <form id="couponForm">
            <!-- Coupon Code & Discount Type -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
              <div>
                <label for="couponCode" class="block text-sm font-medium text-gray-700 mb-2">Coupon Code</label>
                <div class="flex">
                  <input
                    type="text"
                    id="couponCode"
                    placeholder="e.g., SUMMER25"
                    class="flex-1 px-4 py-2.5 rounded-l-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-black focus:border-black"
                  />
                  <button
                    type="button"
                    class="px-4 py-2.5 bg-gray-100 text-gray-700 rounded-r-lg border border-gray-300 hover:bg-gray-200 transition-colors"
                  >
                    Generate
                  </button>
                </div>
              </div>
              <div>
                <label for="discountType" class="block text-sm font-medium text-gray-700 mb-2">Discount Type</label>
                <select
                  id="discountType"
                  class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-black focus:border-black"
                >
                  <option value="fixed">Fixed Amount</option>
                  <option value="percentage">Percentage</option>
                </select>
              </div>
            </div>

            <!-- Value -->
            <div class="mb-6">
              <label for="value" class="block text-sm font-medium text-gray-700 mb-2">Value</label>
              <div class="relative">
                <input
                  type="text"
                  id="value"
                  placeholder="₹ 0.00"
                  class="w-full pl-10 pr-12 py-2.5 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-black focus:border-black"
                />
                <div class="absolute right-3 top-2.5 text-gray-500 text-sm" id="currencySymbol">₹</div>
                <div class="absolute left-3 top-2.5 text-gray-500" id="prefixSymbol"> ₹ </div>
              </div>
            </div>

            <!-- Start Date & End Date -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
              <div>
                <label for="startDate" class="block text-sm font-medium text-gray-700 mb-2">Start Date</label>
                <div class="relative">
                  <input
                    type="date"
                    id="startDate"
                    class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-black focus:border-black"
                  />
                </div>
              </div>
              <div>
                <label for="endDate" class="block text-sm font-medium text-gray-700 mb-2">End Date</label>
                <div class="relative">
                  <input
                    type="date"
                    id="endDate"
                    class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-black focus:border-black"
                  />
                </div>
              </div>
            </div>

            <!-- Conditions -->
            <div class="mb-6">
              <h3 class="text-lg font-medium text-gray-900 mb-3">Conditions</h3>
              <p class="text-sm text-gray-500 mb-4">Set conditions for when this coupon can be applied.</p>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="minPurchase" class="block text-sm font-medium text-gray-700 mb-2">Minimum Purchase Value</label>
                  <input
                    type="text"
                    id="minPurchase"
                    placeholder="e.g., ₹50"
                    class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-black focus:border-black"
                  />
                </div>
                <div>
                  <label for="maxDiscount" class="block text-sm font-medium text-gray-700 mb-2">Maximum Discount Value</label>
                  <input
                    type="text"
                    id="maxDiscount"
                    placeholder="Optional"
                    class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-black focus:border-black"
                  />
                </div>
              </div>
            </div>

            <!-- Usage Limits -->
            <div class="mb-6">
              <h3 class="text-lg font-medium text-gray-900 mb-3">Usage Limits</h3>
              <p class="text-sm text-gray-500 mb-4">Set limits on how many times the coupon can be used.</p>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="limitPerCustomer" class="block text-sm font-medium text-gray-700 mb-2">Limit Per Customer</label>
                  <input
                    type="number"
                    id="limitPerCustomer"
                    value="1"
                    min="1"
                    class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-black focus:border-black"
                  />
                </div>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-end pt-6 border-t border-gray-200">
              <button
                type="submit"
                class="px-6 py-2.5 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors font-medium"
              >
                Create Coupon
              </button>
            </div>
          </form>
        </div>
      </div>
    </main>
  </div>

  <!-- SweetAlert2 + Validation Script -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    const discountTypeSelect = document.getElementById('discountType');
    const valueInput = document.getElementById('value');
    const currencySymbol = document.getElementById('currencySymbol');
    const prefixSymbol = document.getElementById('prefixSymbol');
    const minPurchaseInput = document.getElementById('minPurchase');
    const maxDiscountInput = document.getElementById('maxDiscount');

    // Initialize based on initial selection
    updateValueField();

    discountTypeSelect.addEventListener('change', updateValueField);
    valueInput.addEventListener('input', handleValueInput);
    minPurchaseInput.addEventListener('input', handleMinPurchaseInput);

    function updateValueField() {
      const isPercentage = discountTypeSelect.value === 'percentage';

      if (isPercentage) {
        valueInput.placeholder = 'e.g., 15';
        currencySymbol.textContent = '%';
        prefixSymbol.innerHTML = ''; // No prefix for percentage
        maxDiscountInput.disabled = false;
        maxDiscountInput.classList.remove('bg-gray-100', 'cursor-not-allowed');
      } else {
        valueInput.placeholder = '₹ 0.00';
        currencySymbol.textContent = '₹';
        prefixSymbol.innerHTML = ' ₹ ';
        // Clear and disable maxDiscount for fixed amount
        maxDiscountInput.value = '';
        maxDiscountInput.disabled = true;
        maxDiscountInput.classList.add('bg-gray-100', 'cursor-not-allowed');
      }

      // Reset input format if type changes
      valueInput.value = valueInput.value
        .replace(/[^0-9.]/g, '')
        .replace(/(\..*)\./g, '$1');
    }

    function handleValueInput(e) {
      let val = e.target.value.replace(/[^0-9.]/g, '');
      if (val.split('.').length > 2) val = val.replace(/\.+$/, '');
      if (discountTypeSelect.value === 'percentage') {
        e.target.value = val;
      } else {
        e.target.value = val ? '₹ ' + val : '';
      }
    }

    function handleMinPurchaseInput(e) {
      let val = e.target.value.replace(/[^0-9.]/g, '');
      if (val.split('.').length > 2) val = val.replace(/\.+$/, '');
      e.target.value = val ? '₹ ' + val : '';
    }

    document.getElementById('couponForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const couponCode = document.getElementById('couponCode').value.trim().toUpperCase();
      const discountType = document.getElementById('discountType').value;
      const value = document.getElementById('value').value.trim();
      const startDate = document.getElementById('startDate').value;
      const endDate = document.getElementById('endDate').value;
      const minPurchase = document.getElementById('minPurchase').value.trim();
      const maxDiscount = document.getElementById('maxDiscount').value.trim();
      const limitPerCustomer = document.getElementById('limitPerCustomer').value.trim();

      const showError = (msg) => {
        Swal.fire({ icon: 'error', title: 'Validation Error', text: msg, confirmButtonText: 'OK' });
      };

      // Validate coupon code
      if (!couponCode || couponCode.length < 3) return showError('Coupon code must be at least 3 characters.');
      if (!/^[A-Z0-9_]+$/.test(couponCode)) return showError('Only uppercase letters, numbers, and underscores allowed.');

      // Clean and parse value
      let cleanValue = value.replace(/[^0-9.]/g, '');
      const valNum = cleanValue ? parseFloat(cleanValue) : NaN;
      if (isNaN(valNum) || valNum <= 0) return showError('Please enter a valid discount value > 0.');

      // Validate dates
      if (!startDate || !endDate) return showError('Start and end dates are required.');
      const start = new Date(startDate);
      const end = new Date(endDate);
      const today = new Date();
      today.setHours(0, 0, 0, 0);
      if (start > end) return showError('Start date must be before end date.');
      if (end < today) return showError('Coupon cannot end in the past.');

      // Min purchase
      const minClean = minPurchase.replace(/[^0-9.]/g, '');
      const minNum = minClean ? parseFloat(minClean) : 0;
      if (minPurchase && (isNaN(minNum) || minNum <= 0)) return showError('Minimum purchase must be a positive number.');

      // Max discount (only for percentage)
      if (discountType === 'percentage') {
        if (valNum < 1 || valNum > 100) return showError('Percentage must be between 1% and 100%.');
        if (maxDiscount) {
          const maxClean = maxDiscount.replace(/[^0-9.]/g, '');
          const maxNum = parseFloat(maxClean);
          if (isNaN(maxNum) || maxNum <= 0) return showError('Max discount must be a positive number.');
        }
      }

      // Usage limit
      const limit = parseInt(limitPerCustomer, 10);
      if (isNaN(limit) || limit < 1) return showError('Limit per customer must be at least 1.');

      // Prepare payload
      const payload = {
        couponCode,
        discountType,
        discountAmount: valNum,
        startDate,
        endDate,
        minAmount: minNum > 0 ? minNum : undefined,
        maxAmount: maxDiscount ? parseFloat(maxDiscount.replace(/[^0-9.]/g, '')) : undefined,
        perUserLimit: limit
      };

      try {
        const res = await fetch('/admin/coupon/new/add', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        });

        const data = await res.json();

        if (res.ok) {
          Swal.fire({
            icon: 'success',
            title: 'Coupon Created!',
            text: 'The coupon has been added successfully.',
            confirmButtonText: 'OK'
          }).then(() => window.location.href = '/admin/coupons');
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Failed',
            text: data.message || 'An error occurred.',
            confirmButtonText: 'OK'
          });
        }
      } catch (err) {
        Swal.fire({ icon: 'error', title: 'Network Error', text: 'Could not reach server.', confirmButtonText: 'OK' });
      }
    });
  </script>
</body>
</html>