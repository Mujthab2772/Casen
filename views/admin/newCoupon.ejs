  <!-- SweetAlert2 + Validation Script -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>
    const discountTypeSelect = document.getElementById('discountType');
    const valueInput = document.getElementById('value');
    const currencySymbol = document.getElementById('currencySymbol');
    const prefixSymbol = document.getElementById('prefixSymbol');
    const minPurchaseInput = document.getElementById('minPurchase');
    const maxDiscountInput = document.getElementById('maxDiscount');

    // Initialize based on initial selection
    updateValueField();

    discountTypeSelect.addEventListener('change', updateValueField);
    valueInput.addEventListener('input', handleValueInput);
    minPurchaseInput.addEventListener('input', handleMinPurchaseInput);

    function updateValueField() {
      const isPercentage = discountTypeSelect.value === 'percentage';

      if (isPercentage) {
        valueInput.placeholder = 'e.g., 15';
        currencySymbol.textContent = '%';
        prefixSymbol.innerHTML = ''; // No prefix for percentage
        maxDiscountInput.disabled = false;
        maxDiscountInput.classList.remove('bg-gray-100', 'cursor-not-allowed');
      } else {
        valueInput.placeholder = '₹ 0.00';
        currencySymbol.textContent = '₹';
        prefixSymbol.innerHTML = ' ₹ ';
        // Clear and disable maxDiscount for fixed amount
        maxDiscountInput.value = '';
        maxDiscountInput.disabled = true;
        maxDiscountInput.classList.add('bg-gray-100', 'cursor-not-allowed');
      }

      // Reset input format if type changes
      valueInput.value = valueInput.value
        .replace(/[^0-9.]/g, '')
        .replace(/(\..*)\./g, '$1');
    }

    function handleValueInput(e) {
      let val = e.target.value.replace(/[^0-9.]/g, '');
      if (val.split('.').length > 2) val = val.replace(/\.+$/, '');
      if (discountTypeSelect.value === 'percentage') {
        e.target.value = val;
      } else {
        e.target.value = val ? '₹ ' + val : '';
      }
    }

    function handleMinPurchaseInput(e) {
      let val = e.target.value.replace(/[^0-9.]/g, '');
      if (val.split('.').length > 2) val = val.replace(/\.+$/, '');
      e.target.value = val ? '₹ ' + val : '';
    }

    document.getElementById('couponForm').addEventListener('submit', async (e) => {
      e.preventDefault();

      const couponCode = document.getElementById('couponCode').value.trim().toUpperCase();
      const discountType = document.getElementById('discountType').value;
      const value = document.getElementById('value').value.trim();
      const startDate = document.getElementById('startDate').value;
      const endDate = document.getElementById('endDate').value;
      const minPurchase = document.getElementById('minPurchase').value.trim();
      const maxDiscount = document.getElementById('maxDiscount').value.trim();
      const limitPerCustomer = document.getElementById('limitPerCustomer').value.trim();

      const showError = (msg) => {
        Swal.fire({ icon: 'error', title: 'Validation Error', text: msg, confirmButtonText: 'OK' });
      };

      // Validate coupon code
      if (!couponCode || couponCode.length < 3) return showError('Coupon code must be at least 3 characters.');
      if (!/^[A-Z0-9_]+$/.test(couponCode)) return showError('Only uppercase letters, numbers, and underscores allowed.');

      // Clean and parse value
      let cleanValue = value.replace(/[^0-9.]/g, '');
      const valNum = cleanValue ? parseFloat(cleanValue) : NaN;
      if (isNaN(valNum) || valNum <= 0) return showError('Please enter a valid discount value > 0.');

      // Validate dates
      if (!startDate || !endDate) return showError('Start and end dates are required.');
      const start = new Date(startDate);
      const end = new Date(endDate);
      const today = new Date();
      today.setHours(0, 0, 0, 0);
      if (start > end) return showError('Start date must be before end date.');
      if (end < today) return showError('Coupon cannot end in the past.');

      // Min purchase
      const minClean = minPurchase.replace(/[^0-9.]/g, '');
      const minNum = minClean ? parseFloat(minClean) : 0;
      if (minPurchase && (isNaN(minNum) || minNum <= 0)) return showError('Minimum purchase must be a positive number.');

      // Max discount (only for percentage)
      if (discountType === 'percentage') {
        if (valNum < 1 || valNum > 100) return showError('Percentage must be between 1% and 100%.');
        if (maxDiscount) {
          const maxClean = maxDiscount.replace(/[^0-9.]/g, '');
          const maxNum = parseFloat(maxClean);
          if (isNaN(maxNum) || maxNum <= 0) return showError('Max discount must be a positive number.');
        }
      }

      // Usage limit
      const limit = parseInt(limitPerCustomer, 10);
      if (isNaN(limit) || limit < 1) return showError('Limit per customer must be at least 1.');

      // Prepare payload
      const payload = {
        couponCode,
        discountType,
        discountAmount: valNum,
        startDate,
        endDate,
        minAmount: minNum > 0 ? minNum : undefined,
        maxAmount: maxDiscount ? parseFloat(maxDiscount.replace(/[^0-9.]/g, '')) : undefined,
        perUserLimit: limit
      };

      try {
        const res = await fetch('/admin/coupon/new/add', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(payload)
        });

        const data = await res.json();

        if (res.ok) {
          Swal.fire({
            icon: 'success',
            title: 'Coupon Created!',
            text: 'The coupon has been added successfully.',
            confirmButtonText: 'OK'
          }).then(() => window.location.href = '/admin/coupons');
        } else {
          Swal.fire({
            icon: 'error',
            title: 'Failed',
            text: data.message || 'An error occurred.',
            confirmButtonText: 'OK'
          });
        }
      } catch (err) {
        Swal.fire({ icon: 'error', title: 'Network Error', text: 'Could not reach server.', confirmButtonText: 'OK' });
      }
    });
  </script>
