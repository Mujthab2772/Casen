<!-- Hidden element to store JSON data safely -->
<div id="sales-data" class="hidden"><%- JSON.stringify(salesData).replace(/<\//g, '<\\/') %></div>

<script>
// Initialize chart with data from server
document.addEventListener('DOMContentLoaded', function() {
  // Safely parse the JSON data embedded in the page
  const salesData = JSON.parse(document.getElementById('sales-data').textContent);
  
  // Create the initial chart for daily data
  createSalesChart('daily', salesData);
  
  // Add event listeners for filter buttons
  document.querySelectorAll('.chart-filter-button').forEach(button => {
    button.addEventListener('click', function() {
      // Update active button
      document.querySelectorAll('.chart-filter-button').forEach(btn => {
        btn.classList.remove('active');
      });
      this.classList.add('active');
      
      // Get selected period
      const period = this.getAttribute('data-period');
      
      // Update chart
      createSalesChart(period, salesData);
    });
  });
});

function createSalesChart(period, data) {
  const ctx = document.getElementById('salesChart').getContext('2d');
  
  // Destroy existing chart if it's a valid Chart instance
  if (window.salesChart && typeof window.salesChart.destroy === 'function') {
    window.salesChart.destroy();
  }
  
  let chartData = { labels: [], datasets: [] };
  let title = '';
  
  // Format data based on selected period
  switch(period) {
    case 'daily':
      // Last 7 days
      title = 'Sales - Last 7 Days';
      const dailyData = data.daily.slice(-7);
      chartData.labels = dailyData.map(item => {
        const date = new Date(item.date);
        return date.toLocaleDateString('en-US', { 
          weekday: 'short', 
          month: 'short', 
          day: 'numeric' 
        });
      });
      chartData.datasets = [{
        label: 'Revenue (₹)',
        data: dailyData.map(item => item.total),
        borderColor: '#0ea5e9',
        backgroundColor: 'rgba(14, 165, 233, 0.1)',
        borderWidth: 2,
        fill: true,
        tension: 0.3,
        pointRadius: 3,
        pointBackgroundColor: '#0ea5e9',
        pointHoverRadius: 5,
        pointHoverBackgroundColor: '#0ea5e9'
      }];
      break;
    
    case 'monthly':
      // Last 12 months
      title = 'Sales - Monthly';
      const monthlyData = data.monthly.slice(-12);
      chartData.labels = monthlyData.map(item => {
        const date = new Date(item.year, item.month - 1);
        return date.toLocaleDateString('en-US', { 
          month: 'short', 
          year: 'numeric' 
        });
      });
      chartData.datasets = [{
        label: 'Revenue (₹)',
        data: monthlyData.map(item => item.total),
        borderColor: '#0ea5e9',
        backgroundColor: 'rgba(14, 165, 233, 0.1)',
        borderWidth: 2,
        fill: true,
        tension: 0.3,
        pointRadius: 3,
        pointBackgroundColor: '#0ea5e9',
        pointHoverRadius: 5,
        pointHoverBackgroundColor: '#0ea5e9'
      }];
      break;
    
    case 'yearly':
      // Last 5 years
      title = 'Sales - Yearly';
      const yearlyData = data.yearly.slice(-5);
      chartData.labels = yearlyData.map(item => item.year.toString());
      chartData.datasets = [{
        label: 'Revenue (₹)',
        data: yearlyData.map(item => item.total),
        borderColor: '#0ea5e9',
        backgroundColor: 'rgba(14, 165, 233, 0.1)',
        borderWidth: 2,
        fill: true,
        tension: 0.3,
        pointRadius: 3,
        pointBackgroundColor: '#0ea5e9',
        pointHoverRadius: 5,
        pointHoverBackgroundColor: '#0ea5e9'
      }];
      break;
  }
  
  // Create the chart
  window.salesChart = new Chart(ctx, {
    type: 'line',
    data: chartData,
    options: {
      responsive: true,
      maintainAspectRatio: false,
      plugins: {
        title: {
          display: true,
          text: title,
          font: {
            size: 16,
            weight: 'bold'
          },
          padding: {
            top: 10,
            bottom: 20
          }
        },
        tooltip: {
          mode: 'index',
          intersect: false,
          callbacks: {
            label: function(context) {
              return `₹${parseFloat(context.parsed.y).toLocaleString('en-IN')}`;
            }
          }
        },
        legend: {
          position: 'top',
        }
      },
      scales: {
        y: {
          beginAtZero: true,
          ticks: {
            callback: function(value) {
              return '₹' + parseFloat(value).toLocaleString('en-IN');
            }
          },
          grid: {
            color: 'rgba(0, 0, 0, 0.05)'
          }
        },
        x: {
          grid: {
            display: false
          }
        }
      },
      interaction: {
        mode: 'nearest',
        axis: 'x',
        intersect: false
      },
      animation: {
        duration: 1000,
        easing: 'easeOutQuart'
      }
    }
  });
}

// Fallback to show a message if Chart.js fails to load
window.addEventListener('error', function(event) {
  if (event.target && event.target.src && event.target.src.includes('chart.js')) {
    console.error('Chart.js failed to load. Please check your internet connection or the CDN URL.');
    const chartContainer = document.getElementById('salesChart');
    if (chartContainer) {
      chartContainer.parentElement.innerHTML = `
        <div class="bg-gray-50 border-2 border-dashed rounded-lg p-8 text-center">
          <p class="text-gray-500">Chart.js failed to load. Please refresh the page.</p>
        </div>
      `;
