      <div class="p-4 border-t border-gray-200 absolute inset-x-0 bottom-0">
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center font-semibold text-blue-800">A</div>
          <div>
            <div class="text-sm font-semibold text-gray-900">Admin</div>
            <div class="text-xs text-gray-500 truncate">admin@example.com</div>
          </div>
        </div>
        <form action="/admin/logout" method="post">
          <button type="submit" class="w-full flex items-center justify-center gap-2 py-2 bg-gray-100 rounded-md text-gray-900 text-sm hover:bg-gray-200">
            <svg width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
              <path d="M10.5 1.5H3a1.5 1.5 0 00-1.5 1.5v10a1.5 1.5 0 001.5 1.5h7.5a1.5 1.5 0 001.5-1.5v-4"/>
              <path d="M10.5 5l3-3m0 0l-3-3m3 3H6" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
            </svg>
            Logout
          </button>
        </form>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 ml-[227px] bg-gray-50">
      <div class="bg-white border-b border-gray-200 px-8 py-6">
        <div class="flex justify-between items-center">
          <div>
            <h1 class="text-3xl font-semibold text-black">Offer Management</h1>
            <p class="text-gray-500 mt-1">Create, view, edit, and manage product/category offers.</p>
          </div>
          <a href="/admin/offer/add" class="inline-flex items-center gap-2 bg-black text-white px-4 py-2 rounded-lg hover:bg-gray-800 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Add New Offer
          </a>
        </div>
      </div>

      <div class="p-8">
        <!-- Search and Filters -->
        <div class="flex flex-col sm:flex-row gap-4 mb-8">
          <div class="relative flex-1 min-w-0">
            <input
              type="text"
              id="searchInput"
              value="<%= search || '' %>"
              placeholder="Search by offer name or code"
              class="w-full pl-10 pr-4 py-2.5 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
            />
            <div class="absolute left-3 top-2.5 text-gray-400">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
          </div>

          <div>
            <select id="statusFilter" class="py-2.5 pl-3 pr-8 rounded-lg border border-gray-300 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 min-w-[140px]">
              <option value="all" <%= (status === 'all' || !status) ? 'selected' : '' %>>Status: All</option>
              <option value="active" <%= status === 'active' ? 'selected' : '' %>>Active</option>
              <option value="inactive" <%= status === 'inactive' ? 'selected' : '' %>>Inactive</option>
              <option value="expired" <%= status === 'expired' ? 'selected' : '' %>>Expired</option>
            </select>
          </div>

          <div>
            <select id="offerTypeFilter" class="py-2.5 pl-3 pr-8 rounded-lg border border-gray-300 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 min-w-[140px]">
              <option value="all" <%= (offerType === 'all' || !offerType) ? 'selected' : '' %>>Offer Type: All</option>
              <option value="product" <%= offerType === 'product' ? 'selected' : '' %>>Product</option>
              <option value="category" <%= offerType === 'category' ? 'selected' : '' %>>Category</option>
              <option value="global" <%= offerType === 'global' ? 'selected' : '' %>>Global</option>
            </select>
          </div>
        </div>

        <!-- Table -->
        <div class="bg-white rounded-xl border border-gray-200 overflow-x-auto mb-8">
          <table class="w-full text-sm">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Offer Name</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Type</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Discount</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Start</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">End</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% if (offers.length === 0) { %>
                <tr>
                  <td colspan="7" class="px-4 py-6 text-center text-gray-500">No offers found.</td>
                </tr>
              <% } else { %>
                <% offers.forEach(offer => { %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 py-4"><%= offer.offerName %></td>
                    <td class="px-4 py-4">
                      <%= offer.targetingType === 'products' ? 'Product' :
                          offer.targetingType === 'categories' ? 'Category' :
                          'Global' %>
                    </td>
                    <td class="px-4 py-4">
                      <% if (offer.offerType === 'percentage') { %>
                        <%= offer.discountValue %>% off
                      <% } else { %>
                        â‚¹<%= offer.discountValue %> off
                      <% } %>
                    </td>
                    <td class="px-4 py-4"><%= new Date(offer.startDate).toISOString().split('T')[0] %></td>
                    <td class="px-4 py-4"><%= new Date(offer.endDate).toISOString().split('T')[0] %></td>
                    <td class="px-4 py-4">
                      <% if (offer.status !== 'active') { %>
                        <span class="inline-block px-3 py-1 rounded-md text-xs font-semibold bg-gray-100 text-gray-800">Inactive</span>
                      <% } else { %>
                        <% const now = new Date(); %>
                        <% const isExpired = new Date(offer.endDate) < now; %>
                        <% const isScheduled = new Date(offer.startDate) > now; %>
                        <% if (isExpired) { %>
                          <span class="inline-block px-3 py-1 rounded-md text-xs font-semibold bg-red-100 text-red-800">Expired</span>
                        <% } else if (isScheduled) { %>
                          <span class="inline-block px-3 py-1 rounded-md text-xs font-semibold bg-yellow-100 text-yellow-800">Scheduled</span>
                        <% } else { %>
                          <span class="inline-block px-3 py-1 rounded-md text-xs font-semibold bg-green-100 text-green-800">Active</span>
                        <% } %>
                      <% } %>
                    </td>
                    <td class="px-4 py-4 min-w-max whitespace-nowrap flex items-center gap-2">
                      <a href="/admin/offer/edit/<%= offer._id %>" class="w-9 h-9 flex items-center justify-center bg-blue-100 text-blue-600 rounded-md hover:bg-blue-200">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      </a>
                      <button type="button"
                              data-id="<%= offer._id %>"
                              data-active="<%= offer.status === 'active' && new Date(offer.endDate) > new Date() %>"
                              onclick="confirmToggleActive(this.dataset.id, this.dataset.active === 'true')"
                              class="w-9 h-9 flex items-center justify-center <%= (offer.status === 'active' && new Date(offer.endDate) > new Date()) ? 'bg-red-100 text-red-600 hover:bg-red-200' : 'bg-green-100 text-green-600 hover:bg-green-200' %> rounded-md">
                        <% if (offer.status === 'active' && new Date(offer.endDate) > new Date()) { %>
                          <!-- Trash icon -->
                          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A1 1 0 0117.133 21H6.867A1 1 0 016 19.133L4.867 7H19zm-1 7h-1v-7h1v7z" />
                          </svg>
                        <% } else { %>
                          <!-- Check icon -->
                          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                        <% } %>
                      </button>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="flex items-center justify-between mt-8">
          <div class="text-sm text-gray-600">
            Showing <span class="font-medium"><%= (currentPage - 1) * 10 + 1 %></span> to
            <span class="font-medium"><%= Math.min(currentPage * 10, totalOffers) %></span> of
            <span class="font-medium"><%= totalOffers %></span> offers
          </div>

          <div class="flex items-center gap-2">
            <% if (currentPage > 1) { %>
              <a href="?page=<%= currentPage - 1 %>
                <% if (search) { %>&search=<%= encodeURIComponent(search) %><% } %>
                <% if (status !== 'all') { %>&status=<%= status %><% } %>
                <% if (offerType !== 'all') { %>&offerType=<%= offerType %><% } %>"
                class="flex items-center justify-center w-8 h-8 rounded border border-gray-300 text-gray-700 hover:bg-gray-100">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </a>
            <% } else { %>
              <button disabled class="flex items-center justify-center w-8 h-8 rounded border border-gray-200 text-gray-400 cursor-not-allowed">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </button>
            <% } %>

            <span class="text-sm font-medium text-gray-700 px-2"><%= currentPage %> / <%= totalPages || 1 %></span>

            <% if (currentPage < totalPages) { %>
              <a href="?page=<%= currentPage + 1 %>
                <% if (search) { %>&search=<%= encodeURIComponent(search) %><% } %>
                <% if (status !== 'all') { %>&status=<%= status %><% } %>
                <% if (offerType !== 'all') { %>&offerType=<%= offerType %><% } %>"
                class="flex items-center justify-center w-8 h-8 rounded border border-gray-300 text-gray-700 hover:bg-gray-100">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                </svg>
              </a>
            <% } else { %>
              <button disabled class="flex items-center justify-center w-8 h-8 rounded border border-gray-200 text-gray-400 cursor-not-allowed">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                </svg>
              </button>
            <% } %>
          </div>
        </div>
      </div>
    </main>

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      function updateFilters() {
        const params = new URLSearchParams(window.location.search);
        const search = document.getElementById('searchInput').value.trim();
        const status = document.getElementById('statusFilter').value;
        const offerType = document.getElementById('offerTypeFilter').value;

        params.set('page', '1');
        if (search) params.set('search', search); else params.delete('search');
        if (status && status !== 'all') params.set('status', status); else params.delete('status');
        if (offerType && offerType !== 'all') params.set('offerType', offerType); else params.delete('offerType');

        window.location.search = params.toString();
      }

      // Search only on Enter
      document.getElementById('searchInput').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
          updateFilters();
        }
      });

      // Dropdowns update immediately
      document.getElementById('statusFilter').addEventListener('change', updateFilters);
      document.getElementById('offerTypeFilter').addEventListener('change', updateFilters);

      async function confirmToggleActive(offerId, isActive) {
        const action = isActive ? 'deactivate' : 'reactivate';
        const verb = isActive ? 'Deactivate' : 'Reactivate';
        const message = isActive
          ? `Are you sure you want to <strong>deactivate</strong> this offer?`
          : `Are you sure you want to <strong>reactivate</strong> this offer?`;

        const result = await Swal.fire({
          title: `${verb} Offer?`,
          html: message,
          icon: 'warning',
          showCancelButton: true,
          confirmButtonText: `${verb} Offer`,
          cancelButtonText: 'Cancel',
          reverseButtons: true,
          confirmButtonColor: isActive ? '#ef4444' : '#10b981',
        });

        if (result.isConfirmed) {
          try {
            const response = await fetch(`/admin/offer/toggle/${offerId}`, {
              method: 'PATCH',
              headers: { 'Content-Type': 'application/json' }
            });

            if (response.ok) {
              Swal.fire({
                title: 'Success!',
                text: `Offer has been ${action}d.`,
                icon: 'success',
                timer: 1500,
                showConfirmButton: false
              }).then(() => location.reload());
            } else {
              throw new Error('Server error');
            }
          } catch (error) {
            Swal.fire('Oops!', 'Failed to update offer status. Please try again.', 'error');
          }
        }
      }
    </script>
</body>
</html>