          accept="image/*"
          class="hidden"
          @change="event => {
            const file = event.target.files[0];
            if (file) {
              const reader = new FileReader();
              reader.onload = e => variant.images[i - 1] = e.target.result;
              reader.readAsDataURL(file);
            }
          }"
