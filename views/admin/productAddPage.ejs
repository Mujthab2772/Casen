  <script>
function multiImageUploader(limit = 3) {
  return {
    imageSlots: Array.from({ length: limit }, () => ({ file: null, preview: null })),
    showCropper: false,
    cropper: null,
    currentIndex: null,

    openFile(index) {
      document.getElementById(`imageInput${index}`).click();
    },

    handleFile(event, index) {
      const file = event.target.files[0];
      if (!file) return;
      const preview = URL.createObjectURL(file);
      this.imageSlots[index] = { file, preview };
    },

    dropFile(event, index) {
      const file = event.dataTransfer.files[0];
      if (!file) return;
      const preview = URL.createObjectURL(file);
      this.imageSlots[index] = { file, preview };
    },

    openCropper(index) {
      this.currentIndex = index;
      this.showCropper = true;
      this.$nextTick(() => {
        const img = this.$refs.cropImage;
        img.src = this.imageSlots[index].preview;
        this.cropper = new Cropper(img, {
          aspectRatio: NaN,
          viewMode: 1,
          autoCropArea: 1,
          movable: true,
          zoomable: true,
          rotatable: true,
          scalable: true,
          background: false,
        });
      });
    },

    cancelCrop() {
      if (this.cropper) this.cropper.destroy();
      this.cropper = null;
      this.showCropper = false;
    },

    applyCrop() {
      const canvas = this.cropper.getCroppedCanvas({ width: 400, height: 400 });
      canvas.toBlob((blob) => {
        const croppedFile = new File([blob], this.imageSlots[this.currentIndex].file.name, { type: "image/png" });
        const preview = URL.createObjectURL(croppedFile);
        this.imageSlots[this.currentIndex] = { file: croppedFile, preview };

        // Update hidden file input dynamically
        const dataTransfer = new DataTransfer();
        this.imageSlots.forEach((item) => {
          if (item.file) dataTransfer.items.add(item.file);
        });
        document.querySelectorAll("input[name='productimages']").forEach(input => {
          input.files = dataTransfer.files;
        });

        this.cropper.destroy();
        this.cropper = null;
        this.showCropper = false;
      });
    },

    removeFile(index) {
      this.imageSlots[index] = { file: null, preview: null };
    },
  };
}
</script>

