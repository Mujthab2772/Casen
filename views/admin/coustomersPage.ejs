<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/png" sizes="32x32" href="/logoTab.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>E-Commerce Admin - Customers</title>
    <link rel="stylesheet" href="/customersPage.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="dashboard-container">
      <%- include('partial/aside', {
      selected: 'customers'
    })
    %>

      <main class="main-dashboard">
        <div class="dashboard-header">
          <h1 class="page-title">Customers</h1>
        </div>

        <div class="content-area">                              
          <form action="/admin/customers" method="get">
          <div class="toolbar">
            <div class="search-wrapper">
              <svg class="search-icon" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 17C13.4183 17 17 13.4183 17 9C17 4.58172 13.4183 1 9 1C4.58172 1 1 4.58172 1 9C1 13.4183 4.58172 17 9 17Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M19 19L14.65 14.65" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <input type="search" name="searchCustomer" class="search-input" placeholder="Search customers..." value="<%= searchCustomer || '' %>"/>
            </div>

            <div class="toolbar-actions">
                  <button class="filter-btn">
                  <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M5.5 13a3.5 3.5 0 01-.369-6.98 4 4 0 117.753-1.977A4.5 4.5 0 1113.5 13H11V9.413l1.293 1.293a1 1 0 001.414-1.414l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13H5.5z"/>
                  </svg>
                  Filter by Status
                </button>
              </form>
              <!-- <form action="/admin/customer/reset" method="post"> -->
                <a href="/admin/customers" style="text-decoration: none;">
              <button class="sort-btn" type="button">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
  <path d="M17.65 6.35C16.2 4.9 14.21 4 12 4C7.58 4 4 7.58 4 12C4 16.42 7.58 20 12 20C15.73 20 18.84 17.45 19.73 14H17.65C16.83 16.33 14.61 18 12 18C8.69 18 6 15.31 6 12C6 8.69 8.69 6 12 6C13.66 6 15.14 6.69 16.22 7.78L13 11H20V4L17.65 6.35Z"/>
</svg>
                Reset
              </button>
              </a>
              <!-- </form> -->
            </div>
          </div>

          <div class="table-wrapper">       
            <table class="customers-table">                   
              <thead>
                <tr>
                  <th>Customer</th>
                  <th>Contact</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <% for(let i = 0; i < customers.length; i++) { %>
              <tbody>
                <tr>
                  <td>
                    <div class="customer-cell">
                      <img src="<%= customers[i].profilePic %>" alt="profilePic" class="customer-avatar" />
                      <div class="customer-info">
                        <div class="customer-name"> <%= customers[i].firstName %>  <%= customers[i].lastName %> </div>
                        <div class="customer-date">Registered: <%= new Date(customers[i].createdAt).toISOString().split("T")[0] %></div>
                      </div>
                    </div>
                  </td>
                  <td>
                    <div class="contact-cell">
                      <div> <%= customers[i].email %> </div>
                      <div class="phone"> <%= customers[i].phoneNumber %> </div>
                    </div>
                  </td>
                  <% if(customers[i].isActive){ %>
                      <td><span class="badge badge-active">Active</span></td>
                  <% }else{ %>
                      <td><span class="badge badge-suspended">Blocked</span></td>
                  <% } %>
                  
                  
                  <td>
                    <div class="actions-cell">
                      <form class="delete-form" action="/admin/customers/<%= customers[i]._id %>?_method=PATCH" method="post"  data-status="<%= customers[i].isActive %>">
                          <button class="action-btn delete-btn" title="Delete" type="submit">
                            <svg width="18" height="18" viewBox="0 0 20 20" fill="currentColor">
                              <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
                            </svg>
                          </button>
                      </form>
                    </div>
                  </td>

                </tr>
              </tbody>
              <% } %>
            </table>
          </div>

          <div class="pagination">
            <div class="pagination-info">Showing <%= start+1 %> to <%= end %> of <%= countCustomers %> customers</div>
            <div class="pagination-controls">
              <!-- <form action="/admin/customer/?page=<%= page - 1 %>" method="post"> -->
                <a href="/admin/customers?page=<%= page - 1 %>&searchCustomer=<%= searchCustomer || '' %>">
                <button class="pagination-btn" title="Previous">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </button>
              </a>
              <!-- </form> -->
              <div class="pagination-number"><%= page %> / <%= Math.ceil(countCustomers/5) || 1 %> </div>
              <!-- <form action="/admin/customers?page=<%= page + 1 %>" method=""> -->
                <a href="/admin/customers?page=<%= page + 1 %>&searchCustomer=<%= searchCustomer || '' %>">
                <button class="pagination-btn" title="Next" type="submit">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                </svg>
              </button>
              </a>
              <!-- </form> -->
            </div>
          </div>
        </div>
      </main>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

      <script>
document.addEventListener('DOMContentLoaded', () => {
  const deleteForms = document.querySelectorAll('.delete-form');

  deleteForms.forEach(form => {
    form.addEventListener('submit', (event) => {
      event.preventDefault();

      // Get user's active status from the data attribute
      const isActive = form.dataset.status === 'true';

      if (isActive) {
        // Show SweetAlert confirmation only if user is active
        Swal.fire({
          title: 'Are you sure?',
          text: "This action will permanently block the active user!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Yes, block it!',
          cancelButtonText: 'Cancel'
        }).then((result) => {
          if (result.isConfirmed) {
            form.submit();
          }
        });
      } else {
        // If user is not active, just submit without popup
        form.submit();
      }
    });
  });
});
</script>




  </body>
</html>
