    </aside>
    <!-- Main Content -->
    <main class="flex-1 ml-[227px] bg-gray-50">
      <div class="bg-white border-b border-gray-200 px-8 py-6">
        <div class="flex items-center gap-4">
          <a href="/admin/coupons" class="inline-flex items-center gap-1 text-gray-500 hover:text-gray-700">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Coupon Management
          </a>
        </div>
        <div class="mt-4">
          <h1 class="text-3xl font-semibold text-black">Edit Coupon</h1>
          <p class="text-gray-500 mt-1">Update the parameters for this coupon.</p>
        </div>
      </div>
      <div class="p-8">
        <div class="max-w-4xl mx-auto bg-white rounded-xl shadow-sm p-6">
          <form id="couponForm">
            <!-- Coupon Code & Discount Type -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
              <div>
                <label for="couponCode" class="block text-sm font-medium text-gray-700 mb-2">Coupon Code</label>
                <input
                  type="text"
                  id="couponCode"
                  value="<%= coupon.couponCode %>"
                  readonly
                  class="w-full px-4 py-2.5 rounded-lg border border-gray-300 bg-gray-100 focus:outline-none"
                />
              </div>
              <div>
                <label for="discountType" class="block text-sm font-medium text-gray-700 mb-2">Discount Type (Read-only)</label>
                <select
                  id="discountType"
                  disabled
                  class="w-full px-4 py-2.5 rounded-lg border border-gray-300 bg-gray-100 focus:outline-none"
                >
                  <option value="fixed" <%= coupon.discountType === 'fixed' ? 'selected' : '' %>>Fixed Amount</option>
                  <option value="percentage" <%= coupon.discountType === 'percentage' ? 'selected' : '' %>>Percentage</option>
                </select>
              </div>
            </div>
            <!-- Value -->
            <div class="mb-6">
              <label for="value" class="block text-sm font-medium text-gray-700 mb-2">Value</label>
              <div class="relative">
                <input
                  type="text"
                  id="value"
                  class="w-full pl-10 pr-12 py-2.5 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-black focus:border-black"
                />
                <div class="absolute right-3 top-2.5 text-gray-500 text-sm" id="currencySymbol"></div>
                <div class="absolute left-3 top-2.5 text-gray-500" id="prefixSymbol"></div>
              </div>
            </div>
            <!-- Start Date & End Date -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
              <div>
                <label for="startDate" class="block text-sm font-medium text-gray-700 mb-2">Start Date</label>
                <input
                  type="date"
                  id="startDate"
                  class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-black focus:border-black"
                />
              </div>
              <div>
                <label for="endDate" class="block text-sm font-medium text-gray-700 mb-2">End Date</label>
                <input
                  type="date"
                  id="endDate"
                  class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-black focus:border-black"
                />
              </div>
            </div>
            <!-- Conditions -->
            <div class="mb-6">
              <h3 class="text-lg font-medium text-gray-900 mb-3">Conditions</h3>
              <p class="text-sm text-gray-500 mb-4">Set conditions for when this coupon can be applied.</p>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="minPurchase" class="block text-sm font-medium text-gray-700 mb-2">Minimum Purchase Value</label>
                  <input
                    type="text"
                    id="minPurchase"
                    class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-black focus:border-black"
                  />
                </div>
                <div>
                  <label for="maxDiscount" class="block text-sm font-medium text-gray-700 mb-2">Maximum Discount Value</label>
                  <input
                    type="text"
                    id="maxDiscount"
                    placeholder="Optional"
                    class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-black focus:border-black disabled:bg-gray-100 disabled:cursor-not-allowed"
                  />
                </div>
              </div>
            </div>
            <!-- Usage Limits -->
            <div class="mb-6">
              <h3 class="text-lg font-medium text-gray-900 mb-3">Usage Limits</h3>
              <p class="text-sm text-gray-500 mb-4">Set limits on how many times the coupon can be used.</p>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="limitPerCustomer" class="block text-sm font-medium text-gray-700 mb-2">Limit Per Customer</label>
                  <input
                    type="number"
                    id="limitPerCustomer"
                    min="1"
                    class="w-full px-4 py-2.5 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-black focus:border-black"
                  />
                </div>
              </div>
            </div>
            <!-- Submit Button -->
            <div class="flex justify-end pt-6 border-t border-gray-200">
              <button
                type="submit"
                class="px-6 py-2.5 bg-black text-white rounded-lg hover:bg-gray-800 transition-colors font-medium"
              >
                Update Coupon
              </button>
            </div>
          </form>
        </div>
      </div>
    </main>
    <!-- Hidden JSON data block -->
    <script id="coupon-data" type="application/json">
      <%- JSON.stringify({
        code: coupon.couponCode,
        type: coupon.discountType,
        amount: coupon.discountAmount != null ? coupon.discountAmount : null,
        startDate: coupon.startDate ? new Date(coupon.startDate).toISOString().split('T')[0] : '',
        endDate: coupon.endDate ? new Date(coupon.endDate).toISOString().split('T')[0] : '',
        minAmount: coupon.minAmount != null ? coupon.minAmount : null,
        maxAmount: coupon.maxAmount != null ? coupon.maxAmount : null,
        perUserLimit: coupon.perUserLimit != null ? coupon.perUserLimit : null
      }) %>
    </script>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      const coupon = JSON.parse(document.getElementById('coupon-data').textContent);

      const valueInput = document.getElementById('value');
      const currencySymbol = document.getElementById('currencySymbol');
      const prefixSymbol = document.getElementById('prefixSymbol');
      const minPurchaseInput = document.getElementById('minPurchase');
      const maxDiscountInput = document.getElementById('maxDiscount');
      const startDateInput = document.getElementById('startDate');
      const endDateInput = document.getElementById('endDate');
      const limitPerCustomerInput = document.getElementById('limitPerCustomer');

      const discountType = coupon.type;

      // Initialize fields
      startDateInput.value = coupon.startDate;
      endDateInput.value = coupon.endDate;
      limitPerCustomerInput.value = coupon.perUserLimit;

      if (coupon.minAmount !== null) {
        minPurchaseInput.value = '₹ ' + coupon.minAmount;
      }

      if (discountType === 'percentage') {
        valueInput.value = coupon.amount;
        currencySymbol.textContent = '%';
        prefixSymbol.innerHTML = '';
        if (coupon.maxAmount !== null) {
          maxDiscountInput.value = coupon.maxAmount;
          maxDiscountInput.disabled = false;
        } else {
          maxDiscountInput.disabled = false;
        }
      } else {
        valueInput.value = '₹ ' + coupon.amount;
        currencySymbol.textContent = '₹';
        prefixSymbol.innerHTML = ' ₹ ';
        maxDiscountInput.disabled = true;
        maxDiscountInput.value = '';
      }

      function handleValueInput(e) {
        let val = e.target.value.replace(/[^0-9.]/g, '');
        if (val.split('.').length > 2) val = val.replace(/\.+$/, '');
        if (discountType === 'percentage') {
          e.target.value = val;
        } else {
          e.target.value = val ? '₹ ' + val : '';
        }
      }

      function handleMinPurchaseInput(e) {
        let val = e.target.value.replace(/[^0-9.]/g, '');
        if (val.split('.').length > 2) val = val.replace(/\.+$/, '');
        e.target.value = val ? '₹ ' + val : '';
      }

      valueInput.addEventListener('input', handleValueInput);
      minPurchaseInput.addEventListener('input', handleMinPurchaseInput);

      // Submission
      document.getElementById('couponForm').addEventListener('submit', async (e) => {
        e.preventDefault();

        const couponCode = coupon.code;
        const startDate = startDateInput.value;
        const endDate = endDateInput.value;
        const minPurchase = minPurchaseInput.value.trim();
        const maxDiscount = maxDiscountInput.value.trim();
        const limitPerCustomer = limitPerCustomerInput.value.trim();
        const value = valueInput.value.trim();

        const showError = (msg) => {
          Swal.fire({ icon: 'error', title: 'Validation Error', text: msg, confirmButtonText: 'OK' });
        };

        if (!startDate || !endDate) return showError('Start and end dates are required.');
        const start = new Date(startDate);
        const end = new Date(endDate);
        const today = new Date();
        today.setHours(0, 0, 0, 0);
        if (start > end) return showError('Start date must be before end date.');
        if (end < today) return showError('Coupon cannot end in the past.');

        let cleanValue = value.replace(/[^0-9.]/g, '');
        const valNum = cleanValue ? parseFloat(cleanValue) : NaN;
        if (isNaN(valNum) || valNum <= 0) return showError('Please enter a valid discount value > 0.');

        const minClean = minPurchase.replace(/[^0-9.]/g, '');
        const minNum = minClean ? parseFloat(minClean) : 0;
        if (minPurchase && (isNaN(minNum) || minNum <= 0)) return showError('Minimum purchase must be a positive number.');

        if (discountType === 'percentage') {
          if (valNum < 1 || valNum > 100) return showError('Percentage must be between 1% and 100%.');
          if (maxDiscount) {
            const maxClean = maxDiscount.replace(/[^0-9.]/g, '');
            const maxNum = parseFloat(maxClean);
            if (isNaN(maxNum) || maxNum <= 0) return showError('Max discount must be a positive number.');
          }
        }

        const limit = parseInt(limitPerCustomer, 10);
        if (isNaN(limit) || limit < 1) return showError('Limit per customer must be at least 1.');

        const payload = {
          couponCode,
          discountType, // <-- included but unchanged
          discountAmount: valNum,
          startDate,
          endDate,
          minAmount: minNum > 0 ? minNum : undefined,
          maxAmount: discountType === 'percentage' && maxDiscount ? parseFloat(maxDiscount.replace(/[^0-9.]/g, '')) : undefined,
          perUserLimit: limit
        };

        try {
          const res = await fetch(`/admin/coupon/edit/${encodeURIComponent(couponCode)}`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload)
          });
          const data = await res.json();
          if (res.ok) {
            Swal.fire({
              icon: 'success',
              title: 'Coupon Updated!',
              text: 'The coupon has been updated successfully.',
              confirmButtonText: 'OK'
            }).then(() => window.location.href = '/admin/coupons');
          } else {
            Swal.fire({
              icon: 'error',
              title: 'Failed',
              text: data.message || 'An error occurred while updating the coupon.',
              confirmButtonText: 'OK'
            });
          }
        } catch (err) {
          Swal.fire({
            icon: 'error',
            title: 'Network Error',
            text: 'Could not reach the server. Please try again.',
            confirmButtonText: 'OK'
          });
        }
      });
    </script>
  </div>
</body>
