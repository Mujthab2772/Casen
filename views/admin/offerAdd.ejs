  <script>
    // Inject backend data from EJS
    const backendData = {
      products: JSON.parse(decodeURIComponent('<%- encodeURIComponent(JSON.stringify(items.products || [])) %>')),
      categories: JSON.parse(decodeURIComponent('<%- encodeURIComponent(JSON.stringify(items.category || [])) %>'))
    };
    let selectedProductIds = [];
    let selectedCategoryIds = [];
    document.addEventListener('DOMContentLoaded', function () {
      setupDiscountSymbolToggle();
      setupDateValidation();
      setupApplicabilityToggle();
      setupSearchFunctionality();
      setupFormValidation();
      renderProducts(backendData.products);
      renderCategories(backendData.categories);
    });
    function setupDiscountSymbolToggle() {
      const offerTypeSelect = document.getElementById('offerType');
      const discountSymbolSelect = document.getElementById('discountSymbol');
      offerTypeSelect.addEventListener('change', function () {
        discountSymbolSelect.value = this.value === 'percentage' ? 'percentage' : 'fixed';
      });
    }
    function setupDateValidation() {
      const today = new Date().toISOString().split('T')[0];
      document.getElementById('startDate').min = today;
      document.getElementById('endDate').min = today;
      ['startDate', 'endDate'].forEach(id => {
        document.getElementById(id).addEventListener('change', validateDates);
      });
      function validateDates() {
        const start = new Date(document.getElementById('startDate').value);
        const end = new Date(document.getElementById('endDate').value);
        if (start && end && end <= start) {
          showError('endDate', 'End date must be after start date');
        } else {
          clearError('endDate');
        }
      }
    }
    function setupApplicabilityToggle() {
      const allBtn = document.getElementById('allBtn');
      const productBtn = document.getElementById('productBtn');
      const categoryBtn = document.getElementById('categoryBtn');
      const productSelection = document.getElementById('productSelection');
      const categorySelection = document.getElementById('categorySelection');
      function setActiveButton(activeBtn) {
        [allBtn, productBtn, categoryBtn].forEach(btn => {
          btn.classList.remove('bg-blue-50', 'text-blue-700', 'border-blue-500');
          btn.classList.add('border-gray-300', 'text-gray-700');
          const icon = btn.querySelector('i');
          if (icon) {
            icon.classList.remove('text-blue-600');
            icon.classList.add('text-gray-500');
          }
        });
        activeBtn.classList.add('bg-blue-50', 'text-blue-700', 'border-blue-500');
        const icon = activeBtn.querySelector('i');
        if (icon) {
          icon.classList.add('text-blue-600');
          icon.classList.remove('text-gray-500');
        }
      }
      allBtn.addEventListener('click', () => {
        setActiveButton(allBtn);
        productSelection.classList.add('hidden');
        categorySelection.classList.add('hidden');
      });
      productBtn.addEventListener('click', () => {
        setActiveButton(productBtn);
        productSelection.classList.remove('hidden');
        categorySelection.classList.add('hidden');
      });
      categoryBtn.addEventListener('click', () => {
        setActiveButton(categoryBtn);
        categorySelection.classList.remove('hidden');
        productSelection.classList.add('hidden');
      });
      setActiveButton(allBtn);
    }
    function setupSearchFunctionality() {
      document.getElementById('productSearch').addEventListener('input', (e) => {
        const term = e.target.value.toLowerCase();
        const filtered = backendData.products.filter(p =>
          p.productName.toLowerCase().includes(term) || (p.description && p.description.toLowerCase().includes(term))
        );
        renderProducts(filtered, selectedProductIds);
      });
      document.getElementById('categorySearch').addEventListener('input', (e) => {
        const term = e.target.value.toLowerCase();
        const filtered = backendData.categories.filter(c =>
          c.categoryName.toLowerCase().includes(term) || (c.description && c.description.toLowerCase().includes(term))
        );
        renderCategories(filtered, selectedCategoryIds);
      });
    }
    function renderProducts(products, selectedIds = []) {
      const grid = document.getElementById('productGrid');
      const selectedContainer = document.getElementById('selectedProducts');
      const countEl = document.getElementById('selectedProductCount');
      grid.innerHTML = products.length ? '' : '<div class="col-span-full text-center py-6 text-gray-500">No products found</div>';
      products.forEach(p => {
        const isSelected = selectedIds.includes(p._id.toString());
        const card = document.createElement('div');
        card.className = `product-card bg-white rounded-xl p-3 flex items-center gap-3 cursor-pointer ${isSelected ? 'selected' : ''}`;
        card.innerHTML = `
<div class="flex-1 min-w-0">
<h3 class="font-medium text-gray-900 truncate">${p.productName}</h3>
<p class="text-xs text-gray-500 truncate">${p.description || ''}</p>
</div>
${isSelected ?
            '<div class="w-5 h-5 rounded-full bg-blue-600 text-white flex items-center justify-center"><i class="fas fa-check text-xs"></i></div>' :
            '<div class="w-5 h-5 rounded-full border-2 border-gray-300"></div>'
          }
`;
        card.addEventListener('click', () => {
          const id = p._id.toString();
          if (isSelected) {
            selectedProductIds = selectedProductIds.filter(sid => sid !== id);
          } else {
            selectedProductIds.push(id);
          }
          renderProducts(products, selectedProductIds);
          renderSelectedItems('product');
        });
        grid.appendChild(card);
      });
      renderSelectedItems('product');
    }
    function renderCategories(categories, selectedIds = []) {
      const grid = document.getElementById('categoryGrid');
      const selectedContainer = document.getElementById('selectedCategories');
      const countEl = document.getElementById('selectedCategoryCount');
      grid.innerHTML = categories.length ? '' : '<div class="col-span-full text-center py-6 text-gray-500">No categories found</div>';
      categories.forEach(c => {
        const isSelected = selectedIds.includes(c._id.toString());
        const card = document.createElement('div');
        card.className = `category-card bg-white rounded-xl p-3 flex items-center gap-3 cursor-pointer ${isSelected ? 'selected' : ''}`;
        card.innerHTML = `
<div class="w-12 h-12 rounded-lg overflow-hidden border">
<img src="${c.image || 'https://via.placeholder.com/48 '}" class="w-full h-full object-cover">
</div>
<div class="flex-1 min-w-0">
<h3 class="font-medium text-gray-900 truncate">${c.categoryName}</h3>
<p class="text-xs text-gray-500 truncate">${(c.description || '').substring(0, 40)}${(c.description || '').length > 40 ? '...' : ''}</p>
</div>
${isSelected ?
            '<div class="w-5 h-5 rounded-full bg-purple-600 text-white flex items-center justify-center"><i class="fas fa-check text-xs"></i></div>' :
            '<div class="w-5 h-5 rounded-full border-2 border-gray-300"></div>'
          }
`;
        card.addEventListener('click', () => {
          const id = c._id.toString();
          if (isSelected) {
            selectedCategoryIds = selectedCategoryIds.filter(sid => sid !== id);
          } else {
            selectedCategoryIds.push(id);
          }
          renderCategories(categories, selectedCategoryIds);
          renderSelectedItems('category');
        });
        grid.appendChild(card);
      });
      renderSelectedItems('category');
    }
    function renderSelectedItems(type) {
      const container = document.getElementById(type === 'product' ? 'selectedProducts' : 'selectedCategories');
      const countEl = document.getElementById(`selected${type === 'product' ? 'Product' : 'Category'}Count`);
      const ids = type === 'product' ? selectedProductIds : selectedCategoryIds;
      countEl.textContent = ids.length;
      if (ids.length === 0) {
        container.innerHTML = `<div class="text-sm text-gray-500">No ${type === 'product' ? 'products' : 'categories'} selected yet</div>`;
        return;
      }
      container.innerHTML = '';
      ids.forEach(id => {
        const item = type === 'product'
          ? backendData.products.find(p => p._id.toString() === id)
          : backendData.categories.find(c => c._id.toString() === id);
        if (!item) return;
        const tag = document.createElement('div');
        tag.className = `selected-item ${type === 'category' ? 'category' : ''}`;
        tag.innerHTML = `
<span class="truncate max-w-[150px]">${item[type === 'product' ? 'productName' : 'categoryName']}</span>
<button type="button" class="remove" data-id="${id}">
<i class="fas fa-times text-xs ml-1"></i>
</button>
`;
        container.appendChild(tag);
      });
      container.querySelectorAll('.remove').forEach(btn => {
        btn.addEventListener('click', (e) => {
          e.stopPropagation();
          const id = btn.dataset.id;
          if (type === 'product') {
            selectedProductIds = selectedProductIds.filter(sid => sid !== id);
            renderProducts(backendData.products, selectedProductIds);
            renderSelectedItems('product');
          } else {
            selectedCategoryIds = selectedCategoryIds.filter(sid => sid !== id);
            renderCategories(backendData.categories, selectedCategoryIds);
            renderSelectedItems('category');
          }
        });
      });
    }
    function showError(fieldId, message) {
      const errorElement = document.getElementById(`${fieldId}-error`);
      if (errorElement) {
        errorElement.textContent = message;
        errorElement.classList.remove('hidden');
      }
      const field = document.getElementById(fieldId);
      if (field) {
        field.classList.add('border-red-500');
        field.addEventListener('input', () => {
          field.classList.remove('border-red-500');
          clearError(fieldId);
        }, { once: true });
      }
    }
    function clearError(fieldId) {
      const errorElement = document.getElementById(`${fieldId}-error`);
      if (errorElement) {
        errorElement.classList.add('hidden');
      }
    }
    function setupFormValidation() {
      document.getElementById('offerForm').addEventListener('submit', async (e) => {
        e.preventDefault();
        // Reset all errors
        document.querySelectorAll('.text-red-500.text-xs').forEach(el => el.classList.add('hidden'));
        document.querySelectorAll('.border-red-500').forEach(el => el.classList.remove('border-red-500'));
        const name = document.getElementById('offerName').value.trim();
        const type = document.getElementById('offerType').value;
        const discount = document.getElementById('discountValue').value;
        const startDate = document.getElementById('startDate').value;
        const endDate = document.getElementById('endDate').value;
        let isValid = true;
        if (!name) {
          showError('offerName', 'Offer name is required');
          isValid = false;
        } else if (name.length < 2) {
          showError('offerName', 'Offer name must be at least 2 characters');
          isValid = false;
        } else if (name.length > 100) {
          showError('offerName', 'Offer name cannot exceed 100 characters');
          isValid = false;
        }
        if (!type) {
          showError('offerType', 'Please select an offer type');
          isValid = false;
        }
        if (!discount) {
          showError('discountValue', 'Discount value is required');
          isValid = false;
        } else {
          const discountNum = parseFloat(discount);
          if (isNaN(discountNum) || discountNum <= 0) {
            showError('discountValue', 'Discount value must be greater than 0');
            isValid = false;
          } else if (type === 'percentage' && discountNum > 100) {
            showError('discountValue', 'Percentage discount cannot exceed 100');
            isValid = false;
          }
        }
        if (!startDate) {
          showError('startDate', 'Start date is required');
          isValid = false;
        }
        if (!endDate) {
          showError('endDate', 'End date is required');
          isValid = false;
        } else if (startDate && new Date(endDate) <= new Date(startDate)) {
          showError('endDate', 'End date must be after start date');
          isValid = false;
        }
        const applicableType = document.getElementById('allBtn').classList.contains('bg-blue-50') ? 'all' :
          document.getElementById('productBtn').classList.contains('bg-blue-50') ? 'products' : 'categories';
        if (applicableType === 'products' && selectedProductIds.length === 0) {
          Swal.fire('Validation Error', 'Please select at least one product', 'warning');
          isValid = false;
        }
        if (applicableType === 'categories' && selectedCategoryIds.length === 0) {
          Swal.fire('Validation Error', 'Please select at least one category', 'warning');
          isValid = false;
        }
        if (!isValid) return;
        const payload = {
          offerName: name,
          offerType: type,
          discountValue: parseFloat(discount),
          startDate: startDate,
          endDate: endDate,
          status: document.querySelector('input[name="status"]:checked').value,
          applicableType: applicableType,
          selectedProducts: selectedProductIds,
          selectedCategories: selectedCategoryIds
        };
        try {
          console.log('Sending payload:', payload);
          const response = await fetch('/admin/offer/add/new', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json'
            },
            body: JSON.stringify(payload)
          });
          const result = await response.json();
          if (response.ok) {
            await Swal.fire({
              icon: 'success',
              title: 'Success!',
              text: 'Offer created successfully!',
              timer: 2000,
              showConfirmButton: false
            });
            setTimeout(() => window.location.href = '/admin/offers', 2000);
          } else {
            // Handle validation errors (e.g., from express-validator)
            if (result.errors) {
              result.errors.forEach(err => {
                showError(err.path, err.msg);
              });
            }
            // Handle custom backend errors like "offer already exists"
            else if (result.error) {
              if (result.error === "offer already exists") {
                showError('offerName', 'An offer with this name already exists');
              } else {
                Swal.fire('Error', result.error || 'Failed to create offer', 'error');
              }
            } else {
              Swal.fire('Error', 'Failed to create offer. Please try again.', 'error');
            }
          }
        } catch (err) {
          console.error('Fetch error:', err);
          Swal.fire('Network Error', 'Could not connect to server. Please try again.', 'error');
        }
      });
    }
  </script>
