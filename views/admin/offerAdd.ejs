              class="w-full px-4 py-3 pl-4 pr-16 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
            <div class="absolute right-3 top-1/2 transform -translate-y-1/2">
              <select id="discountSymbol" class="bg-transparent border-none outline-none text-sm font-medium">
                <option value="percentage">%</option>
                <option value="fixed">$</option>
              </select>
            </div>
          </div>
          <p id="discountValue-error" class="mt-1 text-xs text-red-500 hidden"></p>
        </div>
        <!-- Start Date & End Date -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
          <!-- Start Date -->
