<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Caseify Admin - Coupons</title>
  <link rel="icon" type="image/png" sizes="32x32" href="/logoTab.png" />
  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          spacing: {
            '280': '280px',
            '227': '227px',
            '70': '70px',
            '60': '60px',
            '56': '56px',
          }
        }
      }
    }
  </script>
  <style>
    /* Custom dropdown arrow */
    .custom-select {
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
      background-position: right 0.5rem center;
      background-repeat: no-repeat;
      background-size: 1.5em 1.5em;
      padding-right: 2.5rem;
    }
  </style>
</head>
<body class="bg-gray-50 font-sans antialiased">
  <div class="flex min-h-screen">
    <%- include('partial/aside', {
      selected: 'coupons'
    })
    %>

    <!-- Main Content -->
    <main class="flex-1 ml-[227px] bg-gray-50">
      <div class="bg-white border-b border-gray-200 px-8 py-6">
        <div class="flex justify-between items-center">
          <div>
            <h1 class="text-3xl font-semibold text-black">Coupon Management</h1>
            <p class="text-gray-500 mt-1">Create, view, edit, and delete discount coupons.</p>
          </div>
          <a href="/admin/coupon/new" class="inline-flex items-center gap-2 bg-black text-white px-4 py-2 rounded-lg hover:bg-gray-800 transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Add New Coupon
          </a>
        </div>
      </div>

      <div class="p-8">
        <!-- Search and Filters -->
        <div class="flex flex-col sm:flex-row gap-4 mb-8">
          <!-- Search Input with Clear Button -->
          <div class="relative flex-1 min-w-0">
            <input
              type="text"
              id="searchInput"
              value="<%= search || '' %>"
              placeholder="Search by coupon code"
              class="w-full pl-10 pr-10 py-2.5 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition"
              oninput="handleSearchInput()"
              onkeydown="if(event.key === 'Enter') updateFilters()"
            />
            <div class="absolute left-3 top-2.5 text-gray-400">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
            <button
              type="button"
              id="clearSearch"
              class="absolute right-2.5 top-2.5 text-gray-400 hover:text-gray-600 hidden"
              onclick="clearSearch()"
            >
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
            </button>
          </div>

          <!-- Status Filter (now includes Expired & Scheduled) -->
          <div>
            <select id="statusFilter" class="custom-select py-2.5 pl-3 pr-8 rounded-lg border border-gray-300 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent appearance-none min-w-[140px] transition"
                    onchange="updateFilters()">
              <option value="all" <%= (status === 'all' || !status) ? 'selected' : '' %>>Status: All</option>
              <option value="active" <%= status === 'active' ? 'selected' : '' %>>Active</option>
              <option value="inactive" <%= status === 'inactive' ? 'selected' : '' %>>Inactive</option>
              <option value="expired" <%= status === 'expired' ? 'selected' : '' %>>Expired</option>
              <option value="scheduled" <%= status === 'scheduled' ? 'selected' : '' %>>Scheduled</option>
            </select>
          </div>

          <!-- Discount Type -->
          <div>
            <select id="discountTypeFilter" class="custom-select py-2.5 pl-3 pr-8 rounded-lg border border-gray-300 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent appearance-none min-w-[140px] transition"
                    onchange="updateFilters()">
              <option value="all" <%= (discountType === 'all' || !discountType) ? 'selected' : '' %>>Discount Type: All</option>
              <option value="percentage" <%= discountType === 'percentage' ? 'selected' : '' %>>Percentage</option>
              <option value="fixed" <%= discountType === 'fixed' ? 'selected' : '' %>>Fixed Amount</option>
            </select>
          </div>
        </div>

        <!-- Table -->
        <div class="bg-white rounded-xl border border-gray-200 overflow-x-auto mb-8">
          <table class="w-full text-sm">
            <thead class="bg-gray-50 border-b border-gray-200">
              <tr>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Coupon Code</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Discount Type</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Value</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Start Date</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">End Date</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Per User</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% if (coupons.length === 0) { %>
                <tr>
                  <td colspan="8" class="px-4 py-6 text-center text-gray-500">No coupons found.</td>
                </tr>
              <% } else { %>
                <% coupons.forEach(coupon => { %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 py-4"><%= coupon.couponCode %></td>
                    <td class="px-4 py-4">
                      <%= coupon.discountType === 'percentage' ? 'Percentage' :
                          coupon.discountType === 'fixed' ? 'Fixed Amount' : 'Shipping' %>
                    </td>
                    <td class="px-4 py-4">
                      <%= coupon.discountType === 'percentage' ? coupon.discountAmount + '%' :
                          coupon.discountType === 'fixed' ? 'â‚¹' + coupon.discountAmount : 'Free' %>
                    </td>
                    <td class="px-4 py-4"><%= new Date(coupon.startDate).toISOString().split('T')[0] %></td>
                    <td class="px-4 py-4"><%= new Date(coupon.endDate).toISOString().split('T')[0] %></td>
                    <td class="px-4 py-4"><%= coupon.perUserLimit %></td>
                    <td class="px-4 py-4">
                      <% if (!coupon.isActive) { %>
                        <span class="inline-block px-3 py-1 rounded-md text-xs font-semibold bg-gray-100 text-gray-800">Inactive</span>
                      <% } else { %>
                        <% const now = new Date(); %>
                        <% const isExpired = new Date(coupon.endDate) < now; %>
                        <% const isScheduled = new Date(coupon.startDate) > now; %>
                        <% if (isExpired) { %>
                          <span class="inline-block px-3 py-1 rounded-md text-xs font-semibold bg-red-100 text-red-800">Expired</span>
                        <% } else if (isScheduled) { %>
                          <span class="inline-block px-3 py-1 rounded-md text-xs font-semibold bg-yellow-100 text-yellow-800">Scheduled</span>
                        <% } else { %>
                          <span class="inline-block px-3 py-1 rounded-md text-xs font-semibold bg-green-100 text-green-800">Active</span>
                        <% } %>
                      <% } %>
                    </td>
                    <td class="px-4 py-4 min-w-max whitespace-nowrap flex items-center gap-2">
                      <a href="/admin/coupon/edit/<%= coupon.couponCode %>" class="w-9 h-9 flex items-center justify-center bg-blue-100 text-blue-600 rounded-md hover:bg-blue-200">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                        </svg>
                      </a>
                      <button type="button"
                              data-code="<%= coupon.couponCode %>"
                              data-active="<%= coupon.isActive %>"
                              onclick="confirmToggleActive(this.dataset.code, this.dataset.active === 'true')"
                              class="w-9 h-9 flex items-center justify-center <%= coupon.isActive ? 'bg-red-100 text-red-600 hover:bg-red-200' : 'bg-green-100 text-green-600 hover:bg-green-200' %> rounded-md">
                        <% if (coupon.isActive) { %>
                          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A1 1 0 0117.133 21H6.867A1 1 0 016 19.133L4.867 7H19zm-1 7h-1v-7h1v7z" />
                          </svg>
                        <% } else { %>
                          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                          </svg>
                        <% } %>
                      </button>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="flex items-center justify-between mt-8">
          <div class="text-sm text-gray-600">
            Showing <span class="font-medium"><%= (currentPage - 1) * 10 + 1 %></span> to
            <span class="font-medium"><%= Math.min(currentPage * 10, totalCoupons) %></span> of
            <span class="font-medium"><%= totalCoupons %></span> coupons
          </div>

          <div class="flex items-center gap-2">
            <% if (currentPage > 1) { %>
              <a href="?page=<%= currentPage - 1 %>
                <% if (search) { %>&search=<%= encodeURIComponent(search) %><% } %>
                <% if (status && status !== 'all') { %>&status=<%= status %><% } %>
                <% if (discountType && discountType !== 'all') { %>&discountType=<%= discountType %><% } %>"
                class="flex items-center justify-center w-8 h-8 rounded border border-gray-300 text-gray-700 hover:bg-gray-100">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </a>
            <% } else { %>
              <button disabled class="flex items-center justify-center w-8 h-8 rounded border border-gray-200 text-gray-400 cursor-not-allowed">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </button>
            <% } %>

            <span class="text-sm font-medium text-gray-700 px-2"><%= currentPage %> / <%= totalPages || 1 %></span>

            <% if (currentPage < totalPages) { %>
              <a href="?page=<%= currentPage + 1 %>
                <% if (search) { %>&search=<%= encodeURIComponent(search) %><% } %>
                <% if (status && status !== 'all') { %>&status=<%= status %><% } %>
                <% if (discountType && discountType !== 'all') { %>&discountType=<%= discountType %><% } %>"
                class="flex items-center justify-center w-8 h-8 rounded border border-gray-300 text-gray-700 hover:bg-gray-100">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                </svg>
              </a>
            <% } else { %>
              <button disabled class="flex items-center justify-center w-8 h-8 rounded border border-gray-200 text-gray-400 cursor-not-allowed">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                </svg>
              </button>
            <% } %>
          </div>
        </div>
      </div>
    </main>

    <!-- SweetAlert2 + Confirmation Logic -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
      // Clear/search UI logic
      function handleSearchInput() {
        const input = document.getElementById('searchInput');
        const clearBtn = document.getElementById('clearSearch');
        clearBtn.classList.toggle('hidden', !input.value.trim());
      }

      function clearSearch() {
        document.getElementById('searchInput').value = '';
        document.getElementById('clearSearch').classList.add('hidden');
        updateFilters();
      }

      function updateFilters() {
        const params = new URLSearchParams(window.location.search);
        const search = document.getElementById('searchInput').value.trim();
        const status = document.getElementById('statusFilter').value;
        const discountType = document.getElementById('discountTypeFilter').value;

        params.set('page', '1');

        if (search) {
          params.set('search', search);
        } else {
          params.delete('search');
        }

        if (status && status !== 'all') {
          params.set('status', status);
        } else {
          params.delete('status');
        }

        if (discountType && discountType !== 'all') {
          params.set('discountType', discountType);
        } else {
          params.delete('discountType');
        }

        window.location.search = params.toString();
      }

      // Initialize clear button visibility on load
      document.addEventListener('DOMContentLoaded', () => {
        handleSearchInput();
      });

      // Toggle active status
      async function confirmToggleActive(couponCode, isActive) {
        const action = isActive ? 'deactivate' : 'reactivate';
        const verb = isActive ? 'Deactivate' : 'Reactivate';
        const message = isActive
          ? `Are you sure you want to <strong>deactivate</strong> this coupon? It will no longer be usable by customers.`
          : `Are you sure you want to <strong>reactivate</strong> this coupon? It will become usable again.`;

        const result = await Swal.fire({
          title: `${verb} Coupon?`,
          html: message,
          icon: 'warning',
          showCancelButton: true,
          confirmButtonText: `${verb} Coupon`,
          cancelButtonText: 'Cancel',
          reverseButtons: true,
          confirmButtonColor: isActive ? '#ef4444' : '#10b981',
        });

        if (result.isConfirmed) {
          try {
            const response = await fetch(`/admin/coupon/toggle/${encodeURIComponent(couponCode)}`, {
              method: 'PATCH',
              headers: { 'Content-Type': 'application/json' }
            });

            if (response.ok) {
              Swal.fire({
                title: 'Success!',
                text: `Coupon has been ${action}d.`,
                icon: 'success',
                timer: 1500,
                showConfirmButton: false
              }).then(() => {
                location.reload();
              });
            } else {
              throw new Error('Server error');
            }
          } catch (error) {
            console.error('Toggle failed:', error);
            Swal.fire({
              title: 'Oops!',
              text: 'Failed to update coupon status. Please try again.',
              icon: 'error'
            });
          }
        }
      }
    </script>
</body>
</html>