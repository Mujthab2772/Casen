<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Caseify Admin - Orders</title>
  <link rel="icon" type="image/png" sizes="32x32" href="/logoTab.png" />
  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/customersPage.css" />
</head>
<body class="bg-gray-50">
  <div class="dashboard-container">
    <!-- Sidebar (unchanged) -->
    <%- include('partial/aside', {
      selected: 'orders'
    })
    %>

    <!-- Main Content -->
    <main class="main-dashboard">
      <div class="dashboard-header">
        <h1 class="page-title">Orders</h1>
      </div>

      <div class="content-area py-4">
        <div class="max-w-4xl mx-auto px-4 mb-6">
          <div class="flex flex-col sm:flex-row gap-3">
            <!-- ✅ FILTER FORM WITH ID -->
            <form id="filter-form" method="GET" class="relative flex-1">
              <input
                type="text"
                name="search"
                id="search-input"
                placeholder="Search by name or ID..."
                class="w-full pl-11 pr-4 py-2.5 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                value="<%- typeof search !== 'undefined' ? search : '' %>"
              />
              <button
                type="button"
                id="search-action"
                class="absolute left-3.5 top-1/2 -translate-y-1/2 text-gray-400 hover:text-blue-600"
                aria-label="<%- (typeof search !== 'undefined' && search.trim() !== '') ? 'Clear search' : 'Search' %>"
              >
                <% if (typeof search !== 'undefined' && search.trim() !== '') { %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                <% } else { %>
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                  </svg>
                <% } %>
              </button>

              <input type="hidden" name="status" value="<%- (typeof status !== 'undefined' && status) ? status : '' %>" id="status-hidden" />
            </form>

            <!-- Status Dropdown -->
            <div class="relative" x-data="{ open: false, selected: '<%- (typeof status !== 'undefined' && status) ? status : '' %>', options: [
              { value: '', label: 'All Statuses' },
              { value: 'pending', label: 'Pending' },
              { value: 'confirmed', label: 'Confirmed' },
              { value: 'processing', label: 'Processing' },
              { value: 'shipped', label: 'Shipped' },
              { value: 'delivered', label: 'Delivered' },
              { value: 'cancelled', label: 'Cancelled' },
              { value: 'returned', label: 'Returned' },
              { value: 'requestingReturn', label: 'Return Request' }
            ] }" @click.outside="open = false">
              <button
                type="button"
                @click="open = !open"
                class="flex items-center justify-between w-full py-2.5 pl-3 pr-8 rounded-lg border border-gray-300 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500"
                style="min-width: 140px;"
                :aria-expanded="open"
              >
                <span x-text="options.find(o => o.value === selected)?.label || 'All Statuses'"></span>
                <svg class="h-4 w-4 text-gray-700 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>

              <div
                x-show="open"
                x-transition:enter="transition ease-out duration-100"
                x-transition:enter-start="transform opacity-0 scale-95"
                x-transition:enter-end="transform opacity-100 scale-100"
                x-transition:leave="transition ease-in duration-75"
                x-transition:leave-start="transform opacity-100 scale-100"
                x-transition:leave-end="transform opacity-0 scale-95"
                class="absolute z-10 mt-1 w-full bg-white border border-gray-300 rounded-lg shadow-lg max-h-60 overflow-auto"
                role="listbox"
              >
                <template x-for="option in options" :key="option.value">
                  <button
                    type="button"
                    @click="
                      selected = option.value;
                      open = false;
                      document.getElementById('status-hidden').value = option.value;
                      document.getElementById('filter-form').submit();
                    "
                    class="w-full text-left px-3 py-2 text-sm hover:bg-blue-50 focus:bg-blue-100"
                    :class="{ 'bg-blue-100': selected === option.value }"
                  >
                    <span x-text="option.label"></span>
                  </button>
                </template>
              </div>
            </div>
          </div>

          <!-- Active Filters -->
          <div class="mt-3 flex flex-wrap gap-2">
            <% if (typeof search !== 'undefined' && search && search.trim() !== '') { %>
              <span class="inline-flex items-center gap-1 bg-blue-100 text-blue-800 text-xs px-2.5 py-1 rounded-full">
                Search: <strong><%- search %></strong>
                <a href="?<% if (typeof status !== 'undefined' && status) { %>status=<%- encodeURIComponent(status) %><% } %>" class="ml-1 hover:text-blue-600">×</a>
              </span>
            <% } %>

            <% if (typeof status !== 'undefined' && status) { %>
              <%
                const statusLabels = {
                  'pending': 'Pending',
                  'confirmed': 'Confirmed',
                  'processing': 'Processing',
                  'shipped': 'Shipped',
                  'delivered': 'Delivered',
                  'cancelled': 'Cancelled',
                  'returned': 'Returned',
                  'requestingReturn': 'Return Request'
                };
                const label = statusLabels[status] || status;
              %>
              <span class="inline-flex items-center gap-1 bg-indigo-100 text-indigo-800 text-xs px-2.5 py-1 rounded-full">
                Status: <strong><%- label %></strong>
                <a href="?<% if (typeof search !== 'undefined' && search) { %>search=<%- encodeURIComponent(search) %><% } %>" class="ml-1 hover:text-indigo-600">×</a>
              </span>
            <% } %>
          </div>
        </div>

        <!-- Orders Table -->
        <div class="table-wrapper">
          <table class="customers-table w-full">
            <thead>
              <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Date</th>
                <th>Amount</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (orders && orders.length > 0) { %>
                <% orders.forEach(order => { %>
                  <tr>
                    <td>#<%- (order.orderId?.toString().slice(-6) || order._id.toString().slice(-6)) %></td>
                    <td><%- (order.userDetails?.firstName + ' ' + order.userDetails?.lastName) || 'Guest' %></td>
                    <td><%- new Date(order.createdAt).toLocaleDateString() %></td>
                    <td>₹<%- (order.totalAmount || 0) %></td>
                    <td>
                      <% if (order.orderStatus === 'pending') { %>
                        <span class="bg-amber-100 text-amber-800 inline-block px-2 py-1 rounded-full text-xs font-medium whitespace-nowrap">Pending</span>
                      <% } else if (order.orderStatus === 'confirmed') { %>
                        <span class="inline-block px-2 py-1 rounded-full text-xs font-medium whitespace-nowrap bg-sky-100 text-sky-800">Confirmed</span>
                      <% } else if (order.orderStatus === 'processing') { %>
                        <span class="inline-block px-2 py-1 rounded-full text-xs font-medium whitespace-nowrap bg-indigo-100 text-indigo-800">Processing</span>
                      <% } else if (order.orderStatus === 'shipped') { %>
                        <span class="inline-block px-2 py-1 rounded-full text-xs font-medium whitespace-nowrap bg-emerald-100 text-emerald-800">Shipped</span>
                      <% } else if (order.orderStatus === 'delivered') { %>
                        <span class="inline-block px-2 py-1 rounded-full text-xs font-medium whitespace-nowrap bg-green-100 text-green-800">Delivered</span>
                      <% } else if (order.orderStatus === 'cancelled') { %>
                        <span class="inline-block px-2 py-1 rounded-full text-xs font-medium whitespace-nowrap bg-rose-100 text-rose-800">Cancelled</span>
                      <% } else if (order.orderStatus === 'returned') { %>
                        <span class="inline-block px-2 py-1 rounded-full text-xs font-medium whitespace-nowrap bg-purple-100 text-purple-800">Returned</span>
                      <% } else if (order.orderStatus === 'requestingReturn') { %>
                        <span class="inline-block px-2 py-1 rounded-full text-xs font-medium whitespace-nowrap bg-orange-100 text-orange-800">Return Request</span>
                      <% } else { %>
                        <span class="inline-block px-2 py-1 rounded-full text-xs font-medium whitespace-nowrap bg-gray-100 text-gray-800"><%- order.orderStatus %></span>
                      <% } %>
                    </td>
                    <td>
                      <a href="/admin/order/<%- order._id %>" class="action-btn group flex items-center justify-center w-8 h-8 rounded-md bg-white border border-gray-300 text-gray-600 hover:bg-blue-50 hover:text-blue-600 transition-colors duration-150 shadow-sm" aria-label="View order">
                        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                      </a>
                    </td>
                  </tr>
                <% }) %>
              <% } else { %>
                <tr>
                  <td colspan="6" class="text-center py-6 text-gray-500">No orders found</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>

        <!-- Pagination -->
        <div class="pagination mt-8">
          <div class="pagination-info text-sm text-gray-600">
            Showing
            <span class="font-medium"><%- (orders.length > 0 ? ((currentPage - 1) * 5 + 1) : 0) %></span>
            to
            <span class="font-medium"><%- (currentPage - 1) * 5 + orders.length %></span>
            of
            <span class="font-medium"><%- totalOrders %></span>
            orders
          </div>
          <div class="pagination-controls mt-3 flex items-center gap-2">
            <% if (currentPage > 1) { %>
              <a href="?page=<%- currentPage - 1 %>
                <% if (search) { %>&search=<%- encodeURIComponent(search) %><% } %>
                <% if (status) { %>&status=<%- encodeURIComponent(status) %><% } %>"
                class="pagination-btn flex items-center justify-center w-8 h-8 rounded border border-gray-300 text-gray-700 hover:bg-gray-100"
              >
                <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </a>
            <% } else { %>
              <button class="pagination-btn flex items-center justify-center w-8 h-8 rounded border border-gray-200 text-gray-400 cursor-not-allowed" disabled>
                <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </button>
            <% } %>

            <div class="pagination-number text-sm font-medium text-gray-700"><%- currentPage %> / <%- totalPages || 1 %></div>

            <% if (currentPage < totalPages) { %>
              <a href="?page=<%- currentPage + 1 %>
                <% if (search) { %>&search=<%- encodeURIComponent(search) %><% } %>
                <% if (status) { %>&status=<%- encodeURIComponent(status) %><% } %>"
                class="pagination-btn flex items-center justify-center w-8 h-8 rounded border border-gray-300 text-gray-700 hover:bg-gray-100"
              >
                <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                </svg>
              </a>
            <% } else { %>
              <button class="pagination-btn flex items-center justify-center w-8 h-8 rounded border border-gray-200 text-gray-400 cursor-not-allowed" disabled>
                <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                </svg>
              </button>
            <% } %>
          </div>
        </div>
      </div>
    </main>

    <!-- Alpine.js -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.13.10/dist/cdn.min.js"></script>

    <!-- Filtering Scripts -->
    <script>
      // Allow Enter-to-submit
      document.getElementById('filter-form')?.addEventListener('submit', (e) => {
        const input = document.getElementById('search-input');
        input.value = input.value.trim();
        // Allow normal submission
      });

      // Clear search but preserve status
      document.getElementById('search-action')?.addEventListener('click', () => {
        const url = new URL(window.location);
        url.searchParams.delete('search');
        url.searchParams.delete('page');

        const currentStatus = document.getElementById('status-hidden')?.value;
        if (currentStatus) {
          url.searchParams.set('status', currentStatus);
        } else {
          url.searchParams.delete('status');
        }

        window.location.href = url.toString();
      });
    </script>
</body>
</html>