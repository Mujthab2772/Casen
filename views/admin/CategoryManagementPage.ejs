              <thead>
                <tr>
                  <th>Category Name</th>
                  <th>Description</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
             
              <tbody>
                <% for (let i = 0; i < categories.length; i++) { %>
