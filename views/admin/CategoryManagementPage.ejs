                  <td>
                    <div class="customer-cell">
                      <img src="<%= categories[i].image %>" alt="categoryPic" class="customer-avatar" style="object-fit: contain;"/>
                      <div class="customer-info">
                        <div class="customer-name"><%= categories[i].categoryName %></div>
                      </div>
                    </div>
                  </td>
                  <td>
                    <div class="contact-cell">
                      <div> <%= categories[i].description %></div>
                    </div>
                  </td>
                  <% if(categories[i].isValid){ %>
                      <td><span class="badge badge-active">Active</span></td>
                  <% }else{ %>
                      <td><span class="badge badge-suspended">Blocked</span></td>
                  <% } %>                  
                  
                  <td>
                    <div class="actions-cell">
                      <form action="/admin/editCategory/<%= categories[i]._id %>" method="get">
                        <button class="action-btn" title="Edit" type="submit">
                          <svg width="18" height="18" viewBox="0 0 20 20" fill="currentColor">
