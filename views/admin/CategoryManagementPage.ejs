    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const params = new URLSearchParams(window.location.search);
  const success = params.get("success");

  if (success && success.toLowerCase() === "true") {
    Swal.fire({
      title: "Category Added!",
      text: "The new category was successfully added.",
      icon: "success",
      confirmButtonText: "OK",
      confirmButtonColor: "#111827", // dark gray
      background: "#fff",
      color: "#111",
      customClass: {
        popup: "rounded-lg shadow-lg"
      }
    }).then(() => {
      // Optional: clean up URL after showing alert
      window.history.replaceState({}, document.title, window.location.pathname);
    });
  }
});
</script>



<script>
document.addEventListener('DOMContentLoaded', () => {
  const deleteForms = document.querySelectorAll('.delete-form');

  deleteForms.forEach(form => {
    form.addEventListener('submit', (event) => {
      event.preventDefault();

      // Get user's active status from the data attribute
      const isActive = form.dataset.status === 'true';

      if (isActive) {
        // Show SweetAlert confirmation only if user is active
        Swal.fire({
          title: 'Are you sure?',
          text: "This action will permanently block the active category!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Yes, block it!',
          cancelButtonText: 'Cancel'
        }).then((result) => {
          if (result.isConfirmed) {
            form.submit();
          }
        });
      } else {
        // If user is not active, just submit without popup
        form.submit();
      }
    });
  });
});
</script>




