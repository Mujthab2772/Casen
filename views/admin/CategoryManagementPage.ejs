        <div class="content-area">
          <form action="/admin/category" method="get">
          <div class="toolbar">
            <div class="search-wrapper">
              <svg class="search-icon" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
