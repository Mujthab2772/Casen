<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/png" sizes="32x32" href="/logoTab.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>E-Commerce Admin - Customers</title>
    <link rel="stylesheet" href="/customersPage.css" />
    <style>
  #successModal {
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
}
#successModal:not(.hidden) {
    opacity: 1;
}
  
</style>
<script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="dashboard-container">
     <%- include('partial/aside', {
      selected: 'category'
    })
    %>

      <main class="main-dashboard">
        <div class="dashboard-header">
          <h1 class="page-title">Category Management</h1>
        </div>

        <div class="content-area">
          <form action="/admin/category" method="get">
          <div class="toolbar">
            <div class="search-wrapper">
              <svg class="search-icon" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9 17C13.4183 17 17 13.4183 17 9C17 4.58172 13.4183 1 9 1C4.58172 1 1 4.58172 1 9C1 13.4183 4.58172 17 9 17Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                <path d="M19 19L14.65 14.65" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <input type="search" name="searchCategory" class="search-input" placeholder="Search category..."  value="<%= searchCategory || '' %>"/>
            </div>

            <div class="toolbar-actions">
                  <button class="filter-btn">
                  <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M5.5 13a3.5 3.5 0 01-.369-6.98 4 4 0 117.753-1.977A4.5 4.5 0 1113.5 13H11V9.413l1.293 1.293a1 1 0 001.414-1.414l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13H5.5z"/>
                  </svg>
                  Filter by Status
                </button>
              </form>
              <form action="/admin/addcategory" method="get">
              <button class="sort-btn" >
                <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
    <path d="M10 4C10.5523 4 11 4.44772 11 5V9H15C15.5523 9 16 9.44772 16 10C16 10.5523 15.5523 11 15 11H11V15C11 15.5523 10.5523 16 10 16C9.44772 16 9 15.5523 9 15V11H5C4.44772 11 4 10.5523 4 10C4 9.44772 4.44772 9 5 9H9V5C9 4.44772 9.44772 4 10 4Z"/>
  </svg>
                Add New Category
              </button>
              </form>
            </div>
          </div>

          <div class="table-wrapper">       
            <table class="customers-table">                   
              <thead>
                <tr>
                  <th>Category Name</th>
                  <th>Description</th>
                  <th>Status</th>
                  <th>Actions</th>
                </tr>
              </thead>
             
              <tbody>
                <% for (let i = 0; i < categories.length; i++) { %>
                <tr>
                  <td>
                    <div class="customer-cell">
                      <img src="<%= categories[i].image %>" alt="categoryPic" class="customer-avatar" style="object-fit: contain;"/>
                      <div class="customer-info">
                        <div class="customer-name"><%= categories[i].categoryName %></div>
                      </div>
                    </div>
                  </td>
                  <td>
                    <div class="contact-cell">
                      <div> <%= categories[i].description %></div>
                    </div>
                  </td>
                  <% if(categories[i].isValid){ %>
                      <td><span class="badge badge-active">Active</span></td>
                  <% }else{ %>
                      <td><span class="badge badge-suspended">Blocked</span></td>
                  <% } %>                  
                  
                  <td>
                    <div class="actions-cell">
                      <form action="/admin/editCategory/<%= categories[i]._id %>" method="get">
                        <button class="action-btn" title="Edit" type="submit">
                          <svg width="18" height="18" viewBox="0 0 20 20" fill="currentColor">
                            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
                          </svg>
                        </button>
                      </form>
                      <form class="delete-form" action="/admin/category/<%= categories[i].categoryId %>?_method=PATCH" method="post"  data-status="<%= categories[i].isValid %>">
                          <button class="action-btn delete-btn" title="Delete" type="submit">
                            <svg width="18" height="18" viewBox="0 0 20 20" fill="currentColor">
                              <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm5-1a1 1 0 00-1 1v6a1 1 0 102 0V8a1 1 0 00-1-1z" clip-rule="evenodd"/>
                            </svg>
                          </button>
                      </form>
                    </div>
                  </td>

                </tr>
                <% } %>
              </tbody>
            </table>
          </div>

          <div class="pagination">
            <div class="pagination-info">Showing <%= categorySkip + 1 %> to <%= end %> of <%= countCategory %> customers</div>
            <div class="pagination-controls">
              <!-- <form action="/admin/categorie/?categoryPage=<%= page - 1 %>" method="post"> -->
                <a href="/admin/category?page=<%= page - 1 %>&searchCategory=<%= searchCategory || '' %>">
                <button class="pagination-btn" title="Previous">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </button>
              </a>
              <!-- </form> -->
              <div class="pagination-number"><%= page %>/<%= Math.ceil(countCategory/5) || 1 %></div>
              <!-- <form action="/admin/categorie/?categoryPage=<%= page + 1 %>" method="post"> -->
                <a href="/admin/category?page=<%= page + 1 %>&searchCategory=<%= searchCategory || '' %>">
                <button class="pagination-btn" title="Next">
                <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                </svg>
              </button>
              </a>
              <!-- </form> -->
            </div>
          </div>
        </div>
      </main>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
document.addEventListener("DOMContentLoaded", () => {
  const params = new URLSearchParams(window.location.search);
  const success = params.get("success");

  if (success && success.toLowerCase() === "true") {
    Swal.fire({
      title: "Category Added!",
      text: "The new category was successfully added.",
      icon: "success",
      confirmButtonText: "OK",
      confirmButtonColor: "#111827", // dark gray
      background: "#fff",
      color: "#111",
      customClass: {
        popup: "rounded-lg shadow-lg"
      }
    }).then(() => {
      // Optional: clean up URL after showing alert
      window.history.replaceState({}, document.title, window.location.pathname);
    });
  }
});
</script>



<script>
document.addEventListener('DOMContentLoaded', () => {
  const deleteForms = document.querySelectorAll('.delete-form');

  deleteForms.forEach(form => {
    form.addEventListener('submit', (event) => {
      event.preventDefault();

      // Get user's active status from the data attribute
      const isActive = form.dataset.status === 'true';

      if (isActive) {
        // Show SweetAlert confirmation only if user is active
        Swal.fire({
          title: 'Are you sure?',
          text: "This action will permanently block the active category!",
          icon: 'warning',
          showCancelButton: true,
          confirmButtonColor: '#3085d6',
          cancelButtonColor: '#d33',
          confirmButtonText: 'Yes, block it!',
          cancelButtonText: 'Cancel'
        }).then((result) => {
          if (result.isConfirmed) {
            form.submit();
          }
        });
      } else {
        // If user is not active, just submit without popup
        form.submit();
      }
    });
  });
});
</script>




  </body>
</html>
