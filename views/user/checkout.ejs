  <!-- Alpine.js Logic -->
  <script>
    // Address Modal
    window.addressModalController = null;
    function addressModal() {
      return {
        open: false,
        errors: {},
        formData: {
          fullName: '',
          streetAddress: '',
          mobile: '',
          city: '',
          state: '',
          postalcode: '',
          country: '',
          defaultOption: false
        },
        init() {
          window.addressModalController = this;
        },
        openModal() {
          this.open = true;
          this.errors = {};
        },
        closeModal() {
          this.open = false;
          this.errors = {};
          this.formData = {
            fullName: '',
            streetAddress: '',
            mobile: '',
            city: '',
            state: '',
            postalcode: '',
            country: '',
            defaultOption: false
          };
        },
        async submitAddress() {
          this.errors = {};
          // Client-side validation
          if (!this.formData.fullName.trim()) {
            this.errors.fullName = 'Full name is required';
            return;
          }
          if (!this.formData.streetAddress.trim()) {
            this.errors.streetAddress = 'Street address is required';
            return;
          }
          if (!/^\d{10}$/.test(this.formData.mobile.replace(/\D/g, ''))) {
            this.errors.mobile = 'Please enter a valid 10-digit mobile number';
            return;
          }
          if (!this.formData.city.trim()) {
            this.errors.city = 'City is required';
            return;
          }
          if (!this.formData.state.trim()) {
            this.errors.state = 'State is required';
            return;
          }
          if (!/^\d{6}$/.test(this.formData.postalcode.trim())) {
            this.errors.postalcode = 'Please enter a valid 6-digit postal code';
            return;
          }
          if (!this.formData.country) {
            this.errors.country = 'Country is required';
            return;
          }
          const userId = '<%= user._id %>';
          const url = `/profile/addAddress?userId=${userId}`;
          try {
            const res = await fetch(url, {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify(this.formData),
              credentials: 'same-origin'
            });
            const result = await res.json();
            if (res.ok) {
              this.closeModal();
              Swal.fire({
                icon: 'success',
                title: 'Success!',
                text: 'Address added successfully!',
                confirmButtonText: 'OK'
              }).then(() => {
                window.location.reload();
              });
            } else if (result.errors) {
              result.errors.forEach(err => {
                this.errors[err.path] = err.msg;
              });
            } else {
              Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: result.message || 'Failed to add address. Please try again.',
                confirmButtonText: 'OK'
              });
            }
          } catch (error) {
            console.error('Address submission error:', error);
            Swal.fire({
              icon: 'error',
              title: 'Error',
              text: 'An unexpected error occurred. Please try again.',
              confirmButtonText: 'OK'
            });
          }
        }
      };
    }
    // Coupon Modal - FIXED VERSION
    window.couponModalController = null;
    function couponModal() {
      return {
        open: false,
        coupons: [],
        loading: false,
        error: null,
        init() {
          window.couponModalController = this;
          // Try to parse from server-side data first
          try {
            // FIXED: Directly use availableCoupons without double JSON.stringify
            
            const serverCoupons = JSON.parse(decodeURIComponent('<%- encodeURIComponent(JSON.stringify(availableCoupons || [])) %>'))
            if (Array.isArray(serverCoupons) && serverCoupons.length > 0) {
              this.coupons = serverCoupons;
              console.log('Coupons loaded from server:', this.coupons);
            } else {
              this.fetchCoupons();
            }
          } catch (e) {
            console.log('Server coupon parse error:', e);
            this.fetchCoupons();
          }
        },
        openModal() { 
          this.open = true;
          if (this.coupons.length === 0 && !this.loading && !this.error) {
            this.fetchCoupons();
          }
        },
        closeModal() { 
          this.open = false;
          this.error = null;
        },
        async fetchCoupons() {
          this.loading = true;
          this.error = null;
          
          try {
            // FIXED: Correct endpoint URL - should be /checkout/coupons
            const res = await fetch('/checkout/coupons?subtotal=' + encodeURIComponent('<%= subtotal %>'), {
              method: 'GET',
              headers: { 'Content-Type': 'application/json' },
              credentials: 'same-origin'
            });
            
            const result = await res.json();
            
            if (res.ok && result.success && Array.isArray(result.coupons)) {
              // Process and normalize coupon data
              this.coupons = result.coupons.map(coupon => ({
                couponCode: coupon.couponCode || coupon.code,
                description: coupon.description || 'Discount coupon',
                discountType: coupon.discountType || 'percentage',
                discountAmount: coupon.discountAmount || 0,
                minAmount: coupon.minAmount || 0,
                maxAmount: coupon.maxAmount || null
              }));
              console.log('Coupons fetched successfully:', this.coupons);
            } else {
              this.error = result.message || 'No coupons available';
              console.log('Coupon fetch error:', this.error);
            }
          } catch (err) {
            this.error = 'Failed to load coupons. Please try again.';
            console.error('Coupon fetch error:', err);
          } finally {
            this.loading = false;
          }
        },
        applyCoupon(code, minAmount) {
          if (window.checkoutFormController) {
            window.checkoutFormController.applyCoupon(code, minAmount);
          }
          this.closeModal();
        }
      };
    }
    // Checkout Form
    window.checkoutFormController = null;
    function checkoutForm() {
      return {
        email: '<%= (session && session.checkout && session.checkout.contact && session.checkout.contact.email) ? session.checkout.contact.email : "" %>',
        phone: '<%= (session && session.checkout && session.checkout.contact && session.checkout.contact.phone) ? session.checkout.contact.phone : "" %>',
        phoneCode: '+91',
        selectedAddress: '<%= (session && session.checkout && session.checkout.shippingAddressId) ? session.checkout.shippingAddressId : (userAddresses && userAddresses.find(a => a.isDefault) ? userAddresses.find(a => a.isDefault).addressId : (userAddresses && userAddresses.length > 0 ? userAddresses[0].addressId : "")) %>',
        errors: {},
        appliedCoupon: '<%= (session && session.checkout && session.checkout.appliedCouponCode) ? session.checkout.appliedCouponCode : "" %>',
        discountAmount: 0,
        subtotal: parseFloat('<%= subtotal.toFixed(2) %>'),
        totalWithDiscount: parseFloat('<%= subtotal.toFixed(2) %>'),
        init() {
          window.checkoutFormController = this;
          // Apply coupon if we have one in session
          if (this.appliedCoupon) {
            this.applyCoupon(this.appliedCoupon);
          }
        },
        openAddressModal() {
          if (window.addressModalController) {
            window.addressModalController.openModal();
          }
        },
        selectAddress(id) {
          this.selectedAddress = id;
          delete this.errors.selectedAddress;
        },
        getFlag(code) {
          const flags = { '+91': 'üáÆüá≥', '+1': 'üá∫üá∏', '+44': 'üá¨üáß' };
          return flags[code] || 'üåê';
        },
        validateEmail() {
          const email = this.email.trim();
          if (!email) {
            this.errors.email = 'Email is required.';
            return false;
          }
          const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
          if (!re.test(email)) {
            this.errors.email = 'Please enter a valid email address.';
            return false;
          }
          delete this.errors.email;
          return true;
        },
        validatePhone() {
          if (!this.phone) {
            this.errors.phone = 'Phone number is required.';
            return false;
          }
          if (/[^\d\s\-\(\)\+]/.test(this.phone)) {
            this.errors.phone = 'Phone number can only contain digits, spaces, hyphens, or parentheses.';
            return false;
          }
          const clean = this.phone.replace(/\D/g, '');
          if (this.phoneCode === '+91') {
            if (clean.length !== 10) {
              this.errors.phone = 'Indian phone numbers must be 10 digits.';
              return false;
            }
          } else if (clean.length < 9 || clean.length > 15) {
            this.errors.phone = 'Phone number must be 9‚Äì15 digits.';
            return false;
          }
          delete this.errors.phone;
          return true;
        },
        openCouponModal() {
          if (!this.selectedAddress) {
            Swal.fire('Error', 'Please select a shipping address first.', 'warning');
            return;
          }
          if (!this.email || !this.phone) {
            Swal.fire('Error', 'Please fill in your contact information first.', 'warning');
            return;
          }
          if (window.couponModalController) {
            window.couponModalController.openModal();
          } else {
            Swal.fire('Error', 'Coupon system not initialized. Please refresh the page.', 'error');
          }
        },
        async applyCoupon(couponCode, minAmount) {
          if (minAmount && this.subtotal < minAmount) {
            Swal.fire('Error', `Minimum order value of ‚Çπ${minAmount} is required for this coupon.`, 'error');
            return;
          }
          
          if (!this.selectedAddress || !this.email || !this.phone) {
            Swal.fire('Error', 'Please complete your contact and shipping information first.', 'warning');
            return;
          }
          
          try {
            const res = await fetch('/checkout/preview', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                shippingAddressId: this.selectedAddress,
                contact: { email: this.email, phone: this.phone },
                couponCode
              }),
              credentials: 'same-origin'
            });
            const result = await res.json();
            if (res.ok && result.success) {
              this.appliedCoupon = result.validCoupon;
              this.discountAmount = result.discount;
              this.totalWithDiscount = result.total;
              Swal.fire('Success', `Coupon applied successfully!`, 'success');
            } else {
              Swal.fire('Error', result.error || 'Invalid coupon or coupon conditions not met.', 'error');
              if (this.appliedCoupon === couponCode) {
                this.removeCoupon();
              }
            }
          } catch (err) {
            console.error('Coupon apply error:', err);
            Swal.fire('Error', 'Failed to apply coupon. Please try again.', 'error');
          }
        },
        removeCoupon() {
          this.appliedCoupon = '';
          this.discountAmount = 0;
          this.totalWithDiscount = this.subtotal;
        },
        async submitCheckout() {
          this.errors = {};
          
          // Validate all fields
          const isEmailValid = this.validateEmail();
          const isPhoneValid = this.validatePhone();
          
          if (!this.selectedAddress) {
            this.errors.selectedAddress = 'Please select a shipping address';
          }
          
          if (!isEmailValid || !isPhoneValid || !this.selectedAddress) {
            Swal.fire('Error', 'Please complete all required fields.', 'warning');
            return;
          }
          
          try {
            const res = await fetch('/checkout/process', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                contact: { email: this.email, phone: this.phone },
                shippingAddressId: this.selectedAddress,
                coupon: this.appliedCoupon || undefined
              }),
              credentials: 'same-origin'
            });
            
            const result = await res.json();
            
            if (res.ok && result.success) {
              window.location.href = '/payment';
            } else {
              // Handle specific error cases
              if (result.error && result.error.includes('stock')) {
                Swal.fire('Out of Stock', result.error, 'error');
              } else {
                Swal.fire('Error', result.message || result.error || 'Unable to process checkout. Please try again.', 'error');
              }
            }
          } catch (err) {
            console.error('Checkout error:', err);
            Swal.fire('Error', 'Network error. Please check your connection and try again.', 'error');
          }
        }
      };
    }
  </script>
