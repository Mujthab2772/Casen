<body class="bg-white text-gray-800 font-sans" x-data="productApp({
productId: '<%= product._id %>',
productName: '<%= product.productName %>',
categoryName: '<%= product.category?.categoryName || '' %>',
description: `<%= product.description || 'No description available.' %>`,
isLoggedIn: <%= locals.user ? 'true' : 'false' %>,
variants: <%= JSON.stringify(product.variants.map(v => ({
_id: v._id.toString(),
color: (v.color || 'Unknown').trim(),
originalPrice: typeof v.originalPrice === 'number' ? v.originalPrice : (typeof v.price === 'number' ? v.price : 0),
price: typeof v.price === 'number' ? v.price : (parseFloat(v.price) || 0),
stock: typeof v.stock === 'number' ? v.stock : (parseInt(v.stock, 10) || 0),
images: Array.isArray(v.images) ? v.images : ['https://placehold.co/600x600?text=No+Image '],
hasOffer: v.hasOffer || false,
offerInfo: v.offerInfo || null
