throw new Error('Failed to add to wishlist');
}
})
.catch(err => {
console.error('Wishlist add failed:', err);
// Revert local state if operation failed
this.wishlistVariantIds = this.wishlistVariantIds.filter(id => id !== variantId);
Swal.fire({
icon: 'error',
title: 'Oops...',
text: 'Failed to add to wishlist. Please try again.',
confirmButtonText: 'OK'
});
});
}
