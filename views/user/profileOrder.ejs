      `;
      
      const printWindow = window.open('', '_blank', 'width=800,height=600');
      printWindow.document.write(printableContent);
      printWindow.document.close();
      printWindow.focus();
    }

    function confirmCancelOrder(orderId, orderNumber) {
      Swal.fire({
        title: 'Cancel Entire Order?',
        text: `Are you sure you want to cancel order #${orderNumber.slice(0,8).toUpperCase()}?`,
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, Cancel',
        cancelButtonText: 'Keep Order',
        confirmButtonColor: '#ef4444',
        reverseButtons: true
      }).then((result) => {
        if (result.isConfirmed) {
          fetch(`/api/orders/${orderId}/cancel`, {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' }
          })
          .then(res => res.json())
          .then(data => {
            if (data.success) {
              Swal.fire('Cancelled!', 'Your order has been cancelled.', 'success')
                .then(() => location.reload());
            } else {
              Swal.fire('Error', data.message || 'Failed to cancel order.', 'error');
            }
          });
        }
      });
    }

    function confirmReturnOrder(orderId, orderNumber) {
      Swal.fire({
        title: 'Request a Return?',
        text: `Would you like to return order #${orderNumber.slice(0,8).toUpperCase()}?`,
        icon: 'question',
        showCancelButton: true,
        confirmButtonText: 'Request Return',
        cancelButtonText: 'Cancel',
        confirmButtonColor: '#10b981'
      }).then((result) => {
        if (result.isConfirmed) {
          fetch(`/api/orders/${orderId}/return`, {
            method: 'PATCH',
            headers: { 'Content-Type': 'application/json' }
          })
          .then(res => res.json())
          .then(data => {
            if (data.success) {
              Swal.fire('Return Requested!', "We'll contact you shortly with next steps.", 'success')
                .then(() => location.reload());
            } else {
              Swal.fire('Error', data.message || 'Failed to request return.', 'error');
            }
          });
        }
      });
    }

    // Per-item cancel function
    function cancelItem(orderId, itemIndex) {
      Swal.fire({
        title: 'Cancel This Item?',
        text: 'This will remove the item from your order and refund the amount.',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, Remove Item',
        cancelButtonText: 'Keep Item',
        confirmButtonColor: '#ef4444',
        reverseButtons: true
      }).then((result) => {
        if (result.isConfirmed) {
          fetch(`/profile/orders/${orderId}/items/${itemIndex}/cancel`, {
            method: 'DELETE',
            headers: { 'Content-Type': 'application/json' }
          })
          .then(res => res.json())
          .then(data => {
            if (data.success) {
              Swal.fire('Removed!', 'Item has been removed from your order.', 'success')
                .then(() => {
                  Swal.close();
                  location.reload();
                });
            } else {
              Swal.fire('Error', data.message || 'Could not cancel item.', 'error');
            }
          })
          .catch(error => {
            console.error('Error cancelling item:', error);
            Swal.fire('Error', 'Failed to cancel item. Please try again.', 'error');
          });
        }
      });
    }
  </script>
