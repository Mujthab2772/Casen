<!-- PAGINATION -->
<% if (locals.pagination && pagination.totalPages > 1) { %>
<div class="mt-8 flex items-center justify-between">
<div class="text-sm text-gray-500">
Showing <%= (pagination.currentPage - 1) * pagination.limit + 1 %> to
