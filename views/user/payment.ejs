<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>Secure Checkout â€” Payment</title>
<script src="https://cdn.tailwindcss.com"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.13.10/dist/cdn.min.js"></script>
<!-- Razorpay Checkout script -->
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<style>
body {
  background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
}
.payment-card {
  transition: all 0.3s ease;
  backdrop-filter: blur(12px);
  background: rgba(255, 255, 255, 0.7);
  border: 1px solid rgba(229, 231, 235, 0.7);
}
.payment-card:hover {
  border-color: #e5e7eb;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
}
.payment-card.selected {
  border-color: #4F46E5;
  box-shadow: 0 4px 12px -2px rgba(79, 70, 229, 0.2);
  background: rgba(238, 242, 255, 0.7);
}
.flash-message {
  position: fixed;
  top: 20px;
  right: 20px;
  z-index: 9999;
  padding: 1rem;
  border-radius: 0.5rem;
  color: white;
  font-weight: 500;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  animation: slide-in 0.3s ease-out, fade-out 0.5s ease-in 3.5s forwards;
}
.flash-error {
  background-color: #ef4444;
}
.flash-success {
  background-color: #10b981;
}
@keyframes slide-in {
  from {
    transform: translateX(100%);
    opacity: 0;
  }
  to {
    transform: translateX(0);
    opacity: 1;
  }
}
@keyframes fade-out {
  from {
    opacity: 1;
  }
  to {
    opacity: 0;
    transform: translateX(100%);
  }
}
.razorpay-spinner {
  display: none;
  width: 20px;
  height: 20px;
  border: 3px solid rgba(107, 114, 128, 0.3);
  border-top: 3px solid #4f46e5;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}
@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
.wallet-balance {
  transition: all 0.2s ease;
  background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
  color: white;
  box-shadow: 0 4px 6px -1px rgba(107, 70, 229, 0.2);
}
.wallet-balance.low {
  background: linear-gradient(135deg, #ef4444 0%, #f97316 100%);
}
.wallet-icon {
  font-size: 1.25rem;
}
.wallet-animation {
  animation: pulse 2s infinite;
}
@keyframes pulse {
  0% { box-shadow: 0 0 0 0 rgba(107, 70, 229, 0.4); }
  70% { box-shadow: 0 0 0 10px rgba(107, 70, 229, 0); }
  100% { box-shadow: 0 0 0 0 rgba(107, 70, 229, 0); }
}
.payment-loader {
  display: inline-block;
  width: 20px;
  height: 20px;
  border: 3px solid rgba(255,255,255,.3);
  border-radius: 50%;
  border-top-color: white;
  animation: spin 1s linear infinite;
}
</style>
</head>
<body class="text-gray-800 font-sans min-h-screen flex flex-col">
  <!-- Flash Messages -->
  <% if (locals.messages && messages.error) { %>
  <div class="flash-message flash-error" x-data="{ show: true }" x-show="show"
       x-init="setTimeout(() => show = false, 5000)">
    <%= messages.error %>
  </div>
  <% } %>
  <% if (locals.messages && messages.success) { %>
  <div class="flash-message flash-success" x-data="{ show: true }" x-show="show"
       x-init="setTimeout(() => show = false, 5000)">
    <%= messages.success %>
  </div>
  <% } %>
  
  <!-- Header -->
  <header class="bg-white shadow-sm sticky top-0 z-50">
    <div class="container mx-auto px-4 py-3 flex items-center justify-between">
      <div class="flex items-center">
        <a href="/">
          <img src="/logo.png" alt="Logo" class="h-8 object-contain" />
        </a>
      </div>
      <nav class="hidden md:flex space-x-5">
        <a href="/" class="text-sm font-medium transition-opacity hover:opacity-80">Home</a>
        <a href="#" class="text-sm font-medium transition-opacity hover:opacity-80">About</a>
        <a href="/products" class="text-sm font-medium transition-opacity hover:opacity-80">Phone Cases</a>
        <a href="#" class="text-sm font-medium transition-opacity hover:opacity-80">Tablet Cases</a>
        <a href="#" class="text-sm font-medium transition-opacity hover:opacity-80">Sale</a>
      </nav>
      <div class="flex items-center space-x-4">
        <button class="p-2 rounded-full hover:bg-gray-100 transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" onclick="window.location.href='/profile/wishlist'">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
        </button>
        <button class="p-2 rounded-full hover:bg-gray-100 transition-colors relative"
                onclick="window.location.href='/cart'">
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path
              d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </button>
        <% if (locals.user && user.profilePic) { %>
        <div class="relative" x-data="{ open: false }" @click.away="open = false">
          <button @click="open = !open"
                  class="rounded-full overflow-hidden w-8 h-8 border border-transparent hover:border-gray-300 transition-colors focus:outline-none">
            <img src="<%= user.profilePic %>" alt="Profile" class="w-full h-full object-cover" />
          </button>
          <div x-show="open" x-transition
               class="absolute right-0 mt-2 w-44 bg-white shadow-lg rounded-lg py-1 z-50">
            <a href="/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">Profile</a>
            <a href="/profile/wallet" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">Wallet</a>
            <form action="/logout" method="post">
              <button type="submit"
                      class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">Logout</button>
            </form>
          </div>
        </div>
        <% } else if (locals.user) { %>
        <div class="relative" x-data="{ open: false }" @click.away="open = false">
          <button @click="open = !open"
                  class="w-8 h-8 flex items-center justify-center text-gray-600 hover:text-gray-900">
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </button>
          <div x-show="open" x-transition
               class="absolute right-0 mt-2 w-44 bg-white shadow-lg rounded-lg py-1 z-50">
            <a href="/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">Profile</a>
            <a href="/profile/wallet" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">Wallet</a>
            <form action="/logout" method="post">
              <button type="submit"
                      class="w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">Logout</button>
            </form>
          </div>
        </div>
        <% } else { %>
        <a href="/login" class="text-sm font-medium flex items-center">
          <svg class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg> Sign In
        </a>
        <% } %>
        <button class="md:hidden text-gray-600 hover:text-gray-900">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
  </header>
  
  <main class="flex-grow container mx-auto px-4 py-8 max-w-4xl">
    <div class="flex justify-between items-center mb-12">
      <button onclick="window.location.href='/checkout'" class="text-gray-500 hover:text-gray-800">
        <i class="fas fa-chevron-left mr-1"></i> Back
      </button>
      <div class="flex items-center justify-between w-full max-w-md">
        <div class="flex flex-col items-center">
          <div
            class="w-8 h-8 rounded-full border-2 border-gray-300 flex items-center justify-center text-xs font-medium text-gray-500">
            1</div>
          <span class="mt-2 text-xs text-gray-500">Cart</span>
        </div>
        <div class="flex-1 h-px bg-gray-200 mx-2"></div>
        <div class="flex flex-col items-center">
          <div
            class="w-8 h-8 rounded-full border-2 border-indigo-500 flex items-center justify-center text-xs font-medium text-indigo-600">
            2</div>
          <span class="mt-2 text-xs font-medium text-indigo-600">Information</span>
        </div>
        <div class="flex-1 h-px bg-gray-200 mx-2"></div>
        <div class="flex flex-col items-center">
          <div
            class="w-8 h-8 rounded-full bg-indigo-500 flex items-center justify-center text-xs font-medium text-white">
            3</div>
          <span class="mt-2 text-xs font-medium text-indigo-600">Payment</span>
        </div>
      </div>
      <div class="w-12"></div>
    </div>
    
    <div class="text-center mb-10">
      <h1 class="text-2xl md:text-3xl font-bold">Choose How to Pay</h1>
      <p class="text-gray-600 mt-2">All transactions are secure and encrypted</p>
    </div>
    
    <div class="grid lg:grid-cols-3 gap-8">
      <div class="lg:col-span-2">
        <div x-data="paymentComponent">
          <!-- Cash on Delivery -->
          <div @click="selectedMethod = 'cash'" class="payment-card rounded-2xl p-5 cursor-pointer mb-5"
               :class="{ 'selected': selectedMethod === 'cash' }">
            <div class="flex items-start">
              <div class="mt-1 mr-4">
                <div class="w-6 h-6 rounded-full border-2 flex items-center justify-center"
                     :class="selectedMethod === 'cash' ? 'border-indigo-500 bg-indigo-500' : 'border-gray-400'">
                  <i class="fas fa-check text-white text-xs" x-show="selectedMethod === 'cash'"></i>
                </div>
              </div>
              <div>
                <div class="font-semibold flex items-center text-gray-900">
                  <i class="fas fa-money-bill-wave mr-3 text-gray-600"
                     :class="selectedMethod === 'cash' ? 'text-indigo-500' : ''"></i>
                  Cash on Delivery
                </div>
                <p class="text-sm text-gray-600 mt-1">Pay with cash when your order arrives. No additional charges.</p>
              </div>
            </div>
          </div>
          
          <!-- Online Payment -->
          <div @click="selectedMethod = 'online'" class="payment-card rounded-2xl p-5 cursor-pointer mb-5"
               :class="{ 'selected': selectedMethod === 'online' }">
            <div class="flex items-start">
              <div class="mt-1 mr-4">
                <div class="w-6 h-6 rounded-full border-2 flex items-center justify-center"
                     :class="selectedMethod === 'online' ? 'border-indigo-500 bg-indigo-500' : 'border-gray-400'">
                  <i class="fas fa-check text-white text-xs" x-show="selectedMethod === 'online'"></i>
                </div>
              </div>
              <div class="flex-1">
                <div class="font-semibold flex items-center text-gray-900">
                  <i class="fas fa-credit-card mr-3 text-gray-600"
                     :class="selectedMethod === 'online' ? 'text-indigo-500' : ''"></i>
                  Online Payment
                </div>
                <p class="text-sm text-gray-600 mt-1">Pay securely with credit/debit cards, UPI, or net banking.</p>
                <div class="flex space-x-2 mt-3">
                  <span class="text-xs px-2 py-1 bg-white border border-gray-300 rounded-md text-gray-700">Visa</span>
                  <span class="text-xs px-2 py-1 bg-white border border-gray-300 rounded-md text-gray-700">Mastercard</span>
                  <span class="text-xs px-2 py-1 bg-white border border-gray-300 rounded-md text-gray-700">Razorpay</span>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Digital Wallets -->
          <div @click="selectedMethod = 'wallet'" class="payment-card rounded-2xl p-5 cursor-pointer mb-5"
               :class="{ 'selected': selectedMethod === 'wallet' }">
            <div class="flex items-start">
              <div class="mt-1 mr-4">
                <div class="w-6 h-6 rounded-full border-2 flex items-center justify-center"
                     :class="selectedMethod === 'wallet' ? 'border-indigo-500 bg-indigo-500' : 'border-gray-400'">
                  <i class="fas fa-check text-white text-xs" x-show="selectedMethod === 'wallet'"></i>
                </div>
              </div>
              <div class="flex-1">
                <div class="font-semibold flex items-center text-gray-900">
                  <div class="p-1 rounded bg-blue-100 mr-3">
                    <i class="fas fa-wallet text-blue-700"></i>
                  </div>
                  Wallet Payment
                </div>
                <div class="flex justify-between items-center mt-2">
                  <div>
                    <p class="text-sm text-gray-600">Use your wallet balance for instant payment</p>
                    <p class="text-xs text-gray-500 mt-1">Available balance: <span class="font-medium text-green-600">â‚¹<%= user.walletBalance || 0 %></span></p>
                  </div>
                  <% if (user && user.walletBalance && checkoutDetail.orderSummary.total <= user.walletBalance) { %>
                  <div class="text-green-600 font-medium text-sm">
                    <i class="fas fa-check-circle mr-1"></i> Sufficient balance
                  </div>
                  <% } else { %>
                  <div class="text-red-500 font-medium text-sm">
                    <i class="fas fa-exclamation-circle mr-1"></i> Insufficient balance
                  </div>
                  <% } %>
                </div>
                <div class="mt-3 flex flex-wrap gap-2">
                  <div class="flex items-center bg-blue-50 px-2 py-1 rounded-md">
                    <i class="fab fa-google-pay text-blue-600 mr-1"></i>
                    <span class="text-xs text-blue-800 font-medium">Google Pay</span>
                  </div>
                  <div class="flex items-center bg-purple-50 px-2 py-1 rounded-md">
                    <i class="fas fa-wallet text-purple-600 mr-1"></i>
                    <span class="text-xs text-purple-800 font-medium">PhonePe</span>
                  </div>
                  <div class="flex items-center bg-teal-50 px-2 py-1 rounded-md">
                    <i class="fas fa-wallet text-teal-600 mr-1"></i>
                    <span class="text-xs text-teal-800 font-medium">Paytm</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Wallet Top-up CTA -->
          <div x-show="selectedMethod === 'wallet'" class="mt-3 mb-6 bg-blue-50 rounded-xl p-4">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center">
                  <i class="fas fa-plus text-blue-600"></i>
                </div>
              </div>
              <div class="ml-4">
                <h3 class="text-sm font-medium text-blue-800">Need to add funds?</h3>
                <p class="mt-1 text-sm text-blue-600">
                  Top up your wallet instantly with UPI, cards or net banking for faster checkout.
                </p>
                <button onclick="window.location.href='/profile/wallet/add'"
                        class="mt-2 inline-flex items-center text-xs font-medium text-blue-600 hover:text-blue-500">
                  Add funds to wallet
                  <i class="fas fa-arrow-right ml-1"></i>
                </button>
              </div>
            </div>
          </div>
          
          <!-- Payment Forms -->
          <form x-show="selectedMethod === 'cash'" action="/payment/process" method="POST" class="mb-6">
            <input type="hidden" name="paymentMethod" value="cash">
            <button type="submit"
                    class="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-4 rounded-xl font-semibold transition shadow-lg flex items-center justify-center">
              <i class="fas fa-truck mr-2"></i> Confirm & Place Order
            </button>
          </form>
          
          <div x-show="selectedMethod === 'online'">
            <button @click="initiateRazorpayPayment" :disabled="processing"
                    class="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-4 rounded-xl font-semibold transition shadow-lg flex justify-center items-center">
              <span x-show="!processing">
                <i class="fas fa-credit-card mr-2"></i> Confirm & Pay â‚¹<%= checkoutDetail.orderSummary.total %>
              </span>
              <div x-show="processing" class="razorpay-spinner mr-2"></div>
              <span x-show="processing">Processing Payment...</span>
            </button>
          </div>
          
          <div x-show="selectedMethod === 'wallet'">
            <% if (user && user.walletBalance && checkoutDetail.orderSummary.total <= user.walletBalance) { %>
            <form action="/payment/process" method="POST" class="mb-6">
              <input type="hidden" name="paymentMethod" value="wallet">
              <button type="submit"
                      class="w-full bg-gradient-to-r from-blue-500 to-indigo-600 hover:from-blue-600 hover:to-indigo-700 text-white py-4 rounded-xl font-semibold transition shadow-lg flex items-center justify-center wallet-animation">
                <i class="fas fa-wallet mr-2 wallet-icon"></i>
                <span x-show="!processingWallet">Pay with Wallet (â‚¹<%= checkoutDetail.orderSummary.total %>)</span>
                <div x-show="processingWallet" class="payment-loader mr-2"></div>
                <span x-show="processingWallet">Confirming Payment...</span>
              </button>
            </form>
            <% } else { %>
            <button disabled
                    class="w-full bg-gray-300 cursor-not-allowed text-gray-600 py-4 rounded-xl font-semibold mt-4 opacity-75">
              <i class="fas fa-wallet mr-2"></i>
              Insufficient Wallet Balance
            </button>
            <p class="mt-3 text-center text-xs text-gray-500">
              You need â‚¹<%= (checkoutDetail.orderSummary.total - (user.walletBalance || 0)).toFixed(2) %> more to use wallet payment.
              <a href="/profile/wallet" class="text-blue-600 font-medium hover:underline">Add funds</a> to your wallet.
            </p>
            <% } %>
          </div>
          
          <p class="text-center text-xs text-gray-500 mt-3">
            By completing your purchase, you agree to our
            <a href="#" class="text-indigo-600 underline hover:text-indigo-800">Terms of Service</a> and
            <a href="#" class="text-indigo-600 underline hover:text-indigo-800">Privacy Policy</a>.
          </p>
        </div>
      </div>
      
      <!-- Order Summary -->
      <div class="bg-white/80 backdrop-blur-sm rounded-2xl p-6 border border-gray-200 shadow-sm">
        <h3 class="font-bold text-xl text-gray-900 mb-4 flex items-center">
          <i class="fas fa-shopping-cart mr-2 text-indigo-600"></i> Order Summary
        </h3>
        <div class="space-y-3 text-sm">
          <div class="flex justify-between">
            <span class="text-gray-600">Subtotal</span>
            <span>â‚¹ <%= checkoutDetail.orderSummary.subtotal %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Discount</span>
            <span class="text-green-600 font-medium">- â‚¹ <%= checkoutDetail.orderSummary.discount %></span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Shipping</span>
            <span class="font-medium text-green-600">Free</span>
          </div>
          <div class="flex justify-between">
            <span class="text-gray-600">Tax</span>
            <span>â‚¹ <%= checkoutDetail.orderSummary.tax %></span>
          </div>
          <div class="border-t border-gray-200 pt-3 mt-2">
            <div class="flex justify-between text-lg font-bold text-gray-900">
              <span>Total</span>
              <span class="text-indigo-600">â‚¹ <%= checkoutDetail.orderSummary.total %></span>
            </div>
          </div>
        </div>
        
        <!-- Shipping Address -->
        <div class="mt-6 pt-4 border-t border-gray-100">
          <div class="flex items-center mb-3">
            <div class="p-2 bg-indigo-100 rounded-lg">
              <i class="fas fa-map-marker-alt text-indigo-600"></i>
            </div>
            <h4 class="ml-3 font-semibold text-gray-900">Shipping Address</h4>
          </div>
          <div class="bg-gray-50 rounded-lg p-3 text-sm">
            <p class="font-medium"><%= address.fullName %></p>
            <p class="mt-1"><%= address.streetAddress %></p>
            <p><%= address.city %>, <%= address.state %> <%= address.postalCode %></p>
            <p><%= address.country %></p>
            <p class="mt-1">Phone: <%= address.phoneNumber || checkoutDetail.contact.phone %></p>
          </div>
        </div>
        
        <div class="mt-6 p-3 bg-green-50 rounded-lg text-center">
          <p class="text-xs text-green-700 font-medium">âœ… Free returns within 14 days</p>
          <p class="text-xs text-green-700 mt-1">ðŸšš Delivery within 3-5 business days</p>
        </div>
        
        <div class="mt-6 p-4 bg-blue-50 rounded-lg">
          <div class="flex items-start">
            <i class="fas fa-shield-alt text-blue-500 mt-1 mr-2"></i>
            <p class="text-xs text-blue-800">
              All payment information is encrypted using industry-standard SSL technology.
              Your payment details are never stored on our servers.
            </p>
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <!-- Wallet Top-up Modal -->
  <div x-data="{ showTopupModal: false }" 
       x-init="$watch('showTopupModal', val => document.body.style.overflow = val ? 'hidden' : 'auto')"
       class="fixed inset-0 z-50 overflow-y-auto" 
       style="display: none;"
       :style="showTopupModal ? 'display: block' : 'display: none'">
    <div class="fixed inset-0 bg-black bg-opacity-50 transition-opacity" @click="showTopupModal = false"></div>
    
    <div class="relative min-h-screen flex items-center justify-center p-4">
      <div class="relative bg-white rounded-2xl shadow-xl max-w-md w-full transform transition-all"
           @click.away="showTopupModal = false">
        <div class="p-6">
          <div class="flex justify-between items-start">
            <div>
              <h3 class="text-xl font-bold text-gray-900">Add Funds to Wallet</h3>
              <p class="mt-1 text-sm text-gray-500">Instantly top up your wallet for faster checkout</p>
            </div>
            <button @click="showTopupModal = false" class="text-gray-400 hover:text-gray-500">
              <i class="fas fa-times text-xl"></i>
            </button>
          </div>
          
          <div class="mt-6">
            <div class="grid grid-cols-2 gap-3 mb-5">
              <button class="p-4 border-2 border-gray-200 rounded-xl hover:border-indigo-500 hover:bg-indigo-50 transition-colors">
                <span class="font-medium text-lg">â‚¹100</span>
              </button>
              <button class="p-4 border-2 border-gray-200 rounded-xl hover:border-indigo-500 hover:bg-indigo-50 transition-colors">
                <span class="font-medium text-lg">â‚¹250</span>
              </button>
              <button class="p-4 border-2 border-gray-200 rounded-xl hover:border-indigo-500 hover:bg-indigo-50 transition-colors">
                <span class="font-medium text-lg">â‚¹500</span>
              </button>
              <button class="p-4 border-2 border-gray-200 rounded-xl hover:border-indigo-500 hover:bg-indigo-50 transition-colors">
                <span class="font-medium text-lg">â‚¹1000</span>
              </button>
            </div>
            
            <div class="mt-4">
              <label class="block text-sm font-medium text-gray-700 mb-1">Custom Amount</label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <span class="text-gray-500 text-lg">â‚¹</span>
                </div>
                <input type="number" min="1" value="<%= Math.max(100, checkoutDetail.orderSummary.total - (user.walletBalance || 0)) %>" 
                       class="pl-7 w-full rounded-xl border border-gray-300 px-4 py-3 focus:ring-indigo-500 focus:border-indigo-500">
              </div>
            </div>
          </div>
          
          <div class="mt-6 pt-5 border-t border-gray-200">
            <button class="w-full bg-gradient-to-r from-purple-600 to-indigo-700 hover:from-purple-700 hover:to-indigo-800 text-white py-3 rounded-xl font-medium text-lg transition">
              <i class="fas fa-wallet mr-2"></i> Add Funds via UPI
            </button>
            <p class="mt-4 text-center text-sm text-gray-500">
              Your wallet will be credited instantly after payment confirmation
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <script>
    document.addEventListener('alpine:init', () => {
      Alpine.data('paymentComponent', () => ({
        selectedMethod: 'cash',
        processing: false,
        processingWallet: false,
        openWalletTopupModal() {
          document.querySelector('[x-data="{ showTopupModal: false }"]')._x_dataStack[0].showTopupModal = true;
        },
        initiateRazorpayPayment() {
          if (this.processing) return;
          this.processing = true;
          
          fetch('/payment/process', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ paymentMethod: 'online' })
          })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              this.openRazorpayCheckout(data);
            } else {
              throw new Error(data.message || 'Failed to initiate payment');
            }
          })
          .catch(error => {
            console.error('Error:', error);
            this.processing = false;
            Swal.fire({
              icon: 'error',
              title: 'Payment Error',
              text: 'An error occurred while processing your payment. Please try again. Error: ' + error.message,
              confirmButtonText: 'OK'
            });
          });
        },
        openRazorpayCheckout(options) {
          const rzpOptions = {
            key: options.key,
            amount: options.amount,
            currency: options.currency,
            name: options.name,
            description: options.description,
            image: options.image,
            order_id: options.razorpayOrderId,
            prefill: {
              name: '<%= user.firstName + " " + (user.lastName || "") %>',
              email: options.email,
              contact: options.contact
            },
            notes: {
              order_details: JSON.stringify(options.order_details),
              paymentSessionId: options.paymentSessionId
            },
            theme: {
              color: "#4F46E5"
            },
            modal: {
              ondismiss: () => {
                console.log('Payment window dismissed by user');
                window.location.href = '/payment/fail?error=payment_dismissed&reason=User+closed+payment+window';
              }
            },
            callback_url: '/payment/fail',
            handler: (response) => {
              Swal.fire({
                title: 'Verifying Payment...',
                text: 'Please wait while we confirm your payment.',
                allowOutsideClick: false,
                didOpen: () => Swal.showLoading()
              });
              
              setTimeout(() => {
                const params = new URLSearchParams({
                  razorpay_order_id: response.razorpay_order_id,
                  razorpay_payment_id: response.razorpay_payment_id,
                  razorpay_signature: response.razorpay_signature,
                  paymentSessionId: options.paymentSessionId
                });
                window.location.href = `/payment/verify?${params.toString()}`;
              }, 300);
            }
          };
          
          const rzp = new Razorpay(rzpOptions);
          
          rzp.on('payment.failed', (response) => {
            console.log('Payment failed:', response);
            const params = new URLSearchParams({
              error: 'payment_failed',
              code: response.error.code,
              description: encodeURIComponent(response.error.description),
              step: response.error.step,
              reason: encodeURIComponent(response.error.reason)
            });
            window.location.href = `/payment/fail?${params.toString()}`;
          });
          
          rzp.open();
        }
      }));
    });
    
    // Form submission handling for wallet payment
    document.addEventListener('DOMContentLoaded', function() {
      const walletForm = document.querySelector('form[action="/payment/process"][method="POST"]');
      if (walletForm) {
        walletForm.addEventListener('submit', function(e) {
          const walletBalance = <%= user.walletBalance || 0 %>;
          const orderTotal = <%= checkoutDetail.orderSummary.total %>;
          
          if (walletBalance < orderTotal) {
            e.preventDefault();
            Swal.fire({
              icon: 'error',
              title: 'Insufficient Balance',
              text: `Your wallet balance of â‚¹${walletBalance} is insufficient for this order of â‚¹${orderTotal}.`,
              confirmButtonText: 'Add Funds'
            }).then((result) => {
              if (result.isConfirmed) {
                document.querySelector('[x-data="{ showTopupModal: false }"]')._x_dataStack[0].showTopupModal = true;
              }
            });
          }
        });
      }
    });
  </script>
</body>
